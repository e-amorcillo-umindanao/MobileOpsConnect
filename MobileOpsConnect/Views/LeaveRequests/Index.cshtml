@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager
@model IEnumerable<MobileOpsConnect.Models.LeaveRequest>

@{
    ViewData["Title"] = "Leave Request Management";

    // 1. Get Current User Info
    var currentUser = await UserManager.GetUserAsync(User);
    var currentUserId = currentUser?.Id;

    // Pre-loaded user roles from the controller
    var userRoles = (Dictionary<string, string>)ViewBag.UserRoles;

    // 2. Determine MY Rank (The Viewer)
    int myRank = 0;
    if (User.IsInRole("SuperAdmin")) { myRank = 4; }
    else if (User.IsInRole("SystemAdmin")) { myRank = 3; }
    else if (User.IsInRole("DepartmentManager")) { myRank = 2; }
    else { myRank = 1; } // Employee/Staff

    bool hasPower = myRank > 1;

    int totalRequests = Model.Count();
    int pendingCount = Model.Count(l => l.Status == "Pending");
    int approvedCount = Model.Count(l => l.Status == "Approved");
    int rejectedCount = Model.Count(l => l.Status == "Rejected");
    int archivedCount = approvedCount + rejectedCount;

    var activeLeaves = Model.Where(l => l.Status == "Pending").ToList();
    var archivedLeaves = Model.Where(l => l.Status == "Approved" || l.Status == "Rejected").ToList();
}

<!-- ═══════════════════════════════════════════════ -->
<!-- HERO BANNER                                     -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-hero p-4 p-md-5 mb-4 text-white anim-fade-in">
    <div class="position-relative" style="z-index: 2;">
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                <i class="bi bi-circle-fill text-success me-1" style="font-size:0.4rem;vertical-align:middle;"></i>
                HR Module Active
            </span>
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                <i class="bi bi-calendar2-week me-1"></i> @totalRequests Total Request@(totalRequests != 1 ? "s" : "")
            </span>
            @if (pendingCount > 0)
            {
                <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(245,158,11,0.25);">
                    <i class="bi bi-exclamation-circle-fill me-1"></i> @pendingCount Pending
                </span>
            }
            @if (archivedCount > 0)
            {
                <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(148,163,184,0.25);">
                    <i class="bi bi-archive-fill me-1"></i> @archivedCount Archived
                </span>
            }
        </div>
        @if (hasPower)
        {
            <h1 class="display-5 fw-bold mb-2 letter-tight">Manage Leave Requests</h1>
            <p class="lead mb-0 opacity-75">
                Review, approve &amp; manage employee leave applications
            </p>
        }
        else
        {
            <h1 class="display-5 fw-bold mb-2 letter-tight">My Leave History</h1>
            <p class="lead mb-0 opacity-75">
                Track your submitted leave requests &amp; approval status
            </p>
        }
    </div>
    <div class="position-absolute top-50 end-0 translate-middle-y d-none d-lg-block pe-none"
         style="z-index:1;opacity:0.05;font-size:15rem;line-height:1;margin-right:1.5rem;">
        <i class="bi bi-calendar2-week-fill"></i>
    </div>
</div>

