@model IEnumerable<MobileOpsConnect.Models.LeaveRequest>

@{
    ViewData["Title"] = "My Leave Requests";
}

<h1>My Leave Requests</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Apply for New Leave</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Type</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Reason</th>
            <th>Status</th>
            <th>Requested On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LeaveType</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>@item.Reason</td>
                <td>
                    @if (item.Status == "Pending")
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else if (item.Status == "Approved")
                    {
                        <span class="badge bg-success">Approved</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Rejected</span>
                    }
                </td>
                <td>@item.DateRequested.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Back to Dashboard</a>