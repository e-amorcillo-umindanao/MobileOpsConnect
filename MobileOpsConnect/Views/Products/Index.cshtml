@model IEnumerable<MobileOpsConnect.Models.Product>

@{
    ViewData["Title"] = "Inventory List";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>📦 Inventory Management</h1>
    <div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary me-2">Back to Dashboard</a>

        @if (User.IsInRole("SuperAdmin") || User.IsInRole("SystemAdmin"))
        {
            <a asp-action="Create" class="btn btn-primary">➕ Create New Product</a>
        }
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>SKU</th>
            <th>Name</th>
            <th>Category</th>
            <th>Stock Qty</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SKU</td>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>
                    @if (item.StockQuantity <= 10)
                    {
                        <span class="badge bg-danger">@item.StockQuantity</span>
                    }
                    else
                    {
                        <span class="badge bg-success">@item.StockQuantity</span>
                    }
                </td>
                <td>₱@item.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.ProductID" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>