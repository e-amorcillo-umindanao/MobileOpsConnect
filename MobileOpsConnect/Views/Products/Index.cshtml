<!-- TAB TOGGLE SCRIPT                               -->
<!-- ═══════════════════════════════════════════════ -->
<script>
(function () {
    const btns = document.querySelectorAll('.inv-tab-btn');
    const activeSection = document.getElementById('inv-active-section');
    const archivedSection = document.getElementById('inv-archived-section');
    const tabLabel = document.getElementById('inv-tab-label');
    const tabCount = document.getElementById('inv-tab-count');
    const cardTitle = document.getElementById('inv-card-title');
    const cardSubtitle = document.getElementById('inv-card-subtitle');
    const cardBadges = document.getElementById('inv-card-badges');
    const footerText = document.getElementById('inv-footer-text');
    const footerBadges = document.getElementById('inv-footer-badges');

    const activeCount = @activeCount;
    const archivedCount = @outOfStockCount;
    const healthyCount = @healthyCount;
    const lowStockCount = @lowStockCount;

    btns.forEach(btn => {
        btn.addEventListener('click', function () {
            const tab = this.dataset.tab;

            // Toggle active class + styles
            btns.forEach(b => {
                b.classList.remove('active');
                b.style.background = 'var(--moc-surface)';
                b.style.color = 'var(--moc-text-secondary)';
                b.style.border = '1px solid var(--moc-border)';
            });
            this.classList.add('active');
            this.style.background = 'var(--moc-primary)';
            this.style.color = '#fff';
            this.style.border = 'none';

            if (tab === 'active') {
                activeSection.style.display = '';
                archivedSection.style.display = 'none';
                tabLabel.textContent = 'Active Products';
                tabCount.textContent = 'Showing ' + activeCount + ' item' + (activeCount !== 1 ? 's' : '');
                cardTitle.textContent = 'Inventory Catalog';
                cardSubtitle.textContent = activeCount + ' active product' + (activeCount !== 1 ? 's' : '');
                cardBadges.innerHTML = '<span class="badge rounded-pill bg-green-50 text-green text-xs px-2 py-1">' + healthyCount + ' Stocked</span>' +
                    '<span class="badge rounded-pill bg-red-50 text-red text-xs px-2 py-1">' + lowStockCount + ' Low</span>';
                footerText.innerHTML = '<i class="bi bi-info-circle me-1"></i> Showing ' + activeCount + ' active product' + (activeCount !== 1 ? 's' : '');
                footerBadges.innerHTML = '<span class="badge rounded-pill bg-green-50 text-green text-xs px-2 py-1">' + healthyCount + ' Healthy</span>' +
                    '<span class="badge rounded-pill bg-red-50 text-red text-xs px-2 py-1">' + lowStockCount + ' Low</span>';
            } else {
                activeSection.style.display = 'none';
                archivedSection.style.display = '';
                tabLabel.textContent = 'Archived Products';
                tabCount.textContent = 'Showing ' + archivedCount + ' item' + (archivedCount !== 1 ? 's' : '');
                cardTitle.textContent = 'Archived Inventory';
                cardSubtitle.textContent = archivedCount + ' out-of-stock product' + (archivedCount !== 1 ? 's' : '');
                cardBadges.innerHTML = '<span class="badge rounded-pill text-xs px-2 py-1" style="background:rgba(100,116,139,0.1);color:#64748b;">' + archivedCount + ' Archived</span>';
                footerText.innerHTML = '<i class="bi bi-info-circle me-1"></i> Showing ' + archivedCount + ' archived product' + (archivedCount !== 1 ? 's' : '');
                footerBadges.innerHTML = '<span class="badge rounded-pill text-xs px-2 py-1" style="background:rgba(100,116,139,0.1);color:#64748b;"><i class="bi bi-archive-fill me-1"></i> Out of Stock</span>';
            }
        });
    });
})();
</script>
