@model MobileOpsConnect.Models.AccountingEntry

@{
    ViewData["Title"] = "Transaction Details";
    bool isIncome = Model.Type == "Income";
}

<!-- ═══════════════════════════════════════════════ -->
<!-- HERO BANNER                                     -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-hero p-4 p-md-5 mb-4 text-white anim-fade-in">
    <div class="position-relative" style="z-index: 2;">
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                <i class="bi bi-receipt me-1" style="font-size:0.8rem;"></i>
                Transaction #@Model.Id
            </span>
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:@(isIncome ? "rgba(34,197,94,0.25)" : "rgba(239,68,68,0.25)");">
                <i class="bi bi-@(isIncome ? "arrow-up-short" : "arrow-down-short") me-1"></i> @Model.Type
            </span>
        </div>
        <h1 class="display-5 fw-bold mb-2 letter-tight">Transaction Details</h1>
        <p class="lead mb-0 opacity-75">
            Viewing details for @Model.Category — @Model.TransactionDate.ToString("MMMM dd, yyyy")
        </p>
    </div>
    <div class="position-absolute top-50 end-0 translate-middle-y d-none d-lg-block pe-none"
         style="z-index:1;opacity:0.05;font-size:15rem;line-height:1;margin-right:1.5rem;">
        <i class="bi bi-receipt"></i>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- ACTION BAR                                      -->
<!-- ═══════════════════════════════════════════════ -->
<div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4 anim-fade-in anim-delay-1">
    <a asp-action="Index" class="btn btn-moc-outline px-3">
        <i class="bi bi-arrow-left me-1"></i> Back to Ledger
    </a>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- DETAILS CARD                                    -->
<!-- ═══════════════════════════════════════════════ -->
<div class="row justify-content-center anim-fade-in anim-delay-2">
    <div class="col-lg-8">
        <!-- Amount Hero -->
        <div class="card moc-card border-0 shadow-sm mb-4">
            <div class="card-body p-4 p-md-5 text-center">
                <div class="moc-icon-box-lg rounded-3 mx-auto mb-3"
                     style="width:64px;height:64px;background:@(isIncome ? "rgba(34,197,94,0.08)" : "rgba(239,68,68,0.08)");">
                    <i class="bi bi-@(isIncome ? "arrow-up-circle-fill" : "arrow-down-circle-fill") fs-2" style="color:@(isIncome ? "#22c55e" : "#ef4444");"></i>
                </div>
                <h2 class="display-5 fw-bold mb-2 letter-tight" style="color:@(isIncome ? "#22c55e" : "#ef4444");">
                    @(isIncome ? "+" : "−")@Model.Amount.ToString("C")
                </h2>
                <span class="badge rounded-pill px-4 py-2 fw-semibold" style="background:@(isIncome ? "rgba(34,197,94,0.1)" : "rgba(239,68,68,0.1)");color:@(isIncome ? "#16a34a" : "#dc2626");">
                    @Model.Type
                </span>
            </div>
        </div>

        <!-- Detail Fields -->
        <div class="card moc-card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 p-4 pb-0">
                <div class="d-flex align-items-center gap-2">
                    <div class="moc-icon-box bg-indigo-50 rounded-3">
                        <i class="bi bi-info-circle text-indigo fs-5"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0 letter-tight">Record Information</h6>
                        <span class="text-muted text-xs">Full details about this transaction</span>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <!-- Transaction Date -->
                <div class="d-flex align-items-center py-3" style="border-bottom:1px solid rgba(0,0,0,0.05);">
                    <div class="moc-icon-box rounded-3 me-3" style="width:40px;height:40px;min-width:40px;background:rgba(99,102,241,0.06);">
                        <i class="bi bi-calendar3 text-indigo"></i>
                    </div>
                    <div>
                        <span class="text-muted text-xs text-uppercase fw-semibold" style="letter-spacing:0.05em;">Transaction Date</span>
                        <p class="mb-0 fw-semibold text-sm">@Model.TransactionDate.ToString("MMMM dd, yyyy")</p>
                    </div>
                </div>

                <!-- Category -->
                <div class="d-flex align-items-center py-3" style="border-bottom:1px solid rgba(0,0,0,0.05);">
                    <div class="moc-icon-box rounded-3 me-3" style="width:40px;height:40px;min-width:40px;background:rgba(99,102,241,0.06);">
                        <i class="bi bi-tag text-indigo"></i>
                    </div>
                    <div>
                        <span class="text-muted text-xs text-uppercase fw-semibold" style="letter-spacing:0.05em;">Category</span>
                        <p class="mb-0 fw-semibold text-sm">@Model.Category</p>
                    </div>
                </div>

                <!-- Description -->
                <div class="d-flex align-items-center py-3" style="border-bottom:1px solid rgba(0,0,0,0.05);">
                    <div class="moc-icon-box rounded-3 me-3" style="width:40px;height:40px;min-width:40px;background:rgba(99,102,241,0.06);">
                        <i class="bi bi-card-text text-indigo"></i>
                    </div>
                    <div>
                        <span class="text-muted text-xs text-uppercase fw-semibold" style="letter-spacing:0.05em;">Description</span>
                        <p class="mb-0 fw-semibold text-sm">@Model.Description</p>
                    </div>
                </div>

                <!-- Reference Number -->
                <div class="d-flex align-items-center py-3" style="border-bottom:1px solid rgba(0,0,0,0.05);">
                    <div class="moc-icon-box rounded-3 me-3" style="width:40px;height:40px;min-width:40px;background:rgba(99,102,241,0.06);">
                        <i class="bi bi-hash text-indigo"></i>
                    </div>
                    <div>
                        <span class="text-muted text-xs text-uppercase fw-semibold" style="letter-spacing:0.05em;">Reference #</span>
                        <p class="mb-0 fw-semibold text-sm">@(Model.ReferenceNumber ?? "N/A")</p>
                    </div>
                </div>

                <!-- Recorded By -->
                <div class="d-flex align-items-center py-3" style="border-bottom:1px solid rgba(0,0,0,0.05);">
                    <div class="moc-icon-box rounded-3 me-3" style="width:40px;height:40px;min-width:40px;background:rgba(99,102,241,0.06);">
                        <i class="bi bi-person text-indigo"></i>
                    </div>
                    <div>
                        <span class="text-muted text-xs text-uppercase fw-semibold" style="letter-spacing:0.05em;">Recorded By</span>
                        <p class="mb-0 fw-semibold text-sm">@(Model.RecordedBy?.Email ?? "Unknown")</p>
                    </div>
                </div>

                <!-- Recorded On -->
                <div class="d-flex align-items-center py-3" style="border-bottom:1px solid rgba(0,0,0,0.05);">
                    <div class="moc-icon-box rounded-3 me-3" style="width:40px;height:40px;min-width:40px;background:rgba(99,102,241,0.06);">
                        <i class="bi bi-clock text-indigo"></i>
                    </div>
                    <div>
                        <span class="text-muted text-xs text-uppercase fw-semibold" style="letter-spacing:0.05em;">Recorded On</span>
                        <p class="mb-0 fw-semibold text-sm">@Model.CreatedAt.ToString("MMMM dd, yyyy h:mm tt")</p>
                    </div>
                </div>

                <!-- Linked PO (conditional) -->
                @if (Model.PurchaseOrderId != null)
                {
                    <div class="d-flex align-items-center py-3" style="border-bottom:1px solid rgba(0,0,0,0.05);">
                        <div class="moc-icon-box rounded-3 me-3" style="width:40px;height:40px;min-width:40px;background:rgba(99,102,241,0.06);">
                            <i class="bi bi-link-45deg text-indigo"></i>
                        </div>
                        <div>
                            <span class="text-muted text-xs text-uppercase fw-semibold" style="letter-spacing:0.05em;">Linked Purchase Order</span>
                            <p class="mb-0">
                                <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.PurchaseOrderId" class="fw-semibold text-sm" style="color:#6366f1;">
                                    <i class="bi bi-box-arrow-up-right me-1"></i> View Purchase Order #@Model.PurchaseOrderId
                                </a>
                            </p>
                        </div>
                    </div>
                }

                <!-- Notes -->
                <div class="d-flex align-items-start py-3">
                    <div class="moc-icon-box rounded-3 me-3" style="width:40px;height:40px;min-width:40px;background:rgba(99,102,241,0.06);">
                        <i class="bi bi-sticky text-indigo"></i>
                    </div>
                    <div>
                        <span class="text-muted text-xs text-uppercase fw-semibold" style="letter-spacing:0.05em;">Notes</span>
                        <p class="mb-0 text-sm" style="color: #64748b;">@(Model.Notes ?? "No notes provided.")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
