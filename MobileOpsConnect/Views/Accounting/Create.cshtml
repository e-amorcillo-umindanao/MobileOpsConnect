@model MobileOpsConnect.Models.AccountingEntry

@{
    ViewData["Title"] = "New Transaction";
}

<!-- ═══════════════════════════════════════════════ -->
<!-- HERO BANNER                                     -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-hero p-4 p-md-5 mb-4 text-white anim-fade-in">
    <div class="position-relative" style="z-index: 2;">
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                <i class="bi bi-plus-circle text-success me-1" style="font-size:0.8rem;vertical-align:text-top;"></i>
                New Record
            </span>
        </div>
        <h1 class="display-5 fw-bold mb-2 letter-tight">Record Transaction</h1>
        <p class="lead mb-0 opacity-75">
            Add a new income or expense entry to the accounting ledger.
        </p>
    </div>
    <div class="position-absolute top-50 end-0 translate-middle-y d-none d-lg-block pe-none"
         style="z-index:1;opacity:0.05;font-size:15rem;line-height:1;margin-right:1.5rem;">
        <i class="bi bi-receipt-cutoff"></i>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- ACTION BAR                                      -->
<!-- ═══════════════════════════════════════════════ -->
<div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4 anim-fade-in anim-delay-1">
    <a asp-action="Index" class="btn btn-moc-outline px-3">
        <i class="bi bi-arrow-left me-1"></i> Back to Ledger
    </a>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- FORM CARD                                       -->
<!-- ═══════════════════════════════════════════════ -->
<div class="row justify-content-center anim-fade-in anim-delay-2">
    <div class="col-lg-8">
        <div class="card moc-card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 p-4 pb-0">
                <div class="d-flex align-items-center gap-2">
                    <div class="moc-icon-box bg-indigo-50 rounded-3">
                        <i class="bi bi-pencil-square text-indigo fs-5"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-0 letter-tight">Transaction Details</h6>
                        <span class="text-muted text-xs">Fill in all required fields below</span>
                    </div>
                </div>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="TransactionDate" class="form-label text-xs fw-semibold text-uppercase text-muted" style="letter-spacing:0.05em;"></label>
                            <input asp-for="TransactionDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" style="border-radius:0.625rem;padding:0.625rem 1rem;" />
                            <span asp-validation-for="TransactionDate" class="text-danger text-xs"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Type" class="form-label text-xs fw-semibold text-uppercase text-muted" style="letter-spacing:0.05em;"></label>
                            <select asp-for="Type" class="form-select" style="border-radius:0.625rem;padding:0.625rem 1rem;">
                                <option value="Expense">Expense</option>
                                <option value="Income">Income</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger text-xs"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label text-xs fw-semibold text-uppercase text-muted" style="letter-spacing:0.05em;"></label>
                        <input asp-for="Category" class="form-control" list="categoryList" placeholder="Select or type a category..." style="border-radius:0.625rem;padding:0.625rem 1rem;" />
                        <datalist id="categoryList">
                            <option value="Purchase Order"></option>
                            <option value="Payroll"></option>
                            <option value="Sales Revenue"></option>
                            <option value="Utilities"></option>
                            <option value="Maintenance"></option>
                            <option value="Office Supplies"></option>
                        </datalist>
                        <span asp-validation-for="Category" class="text-danger text-xs"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label text-xs fw-semibold text-uppercase text-muted" style="letter-spacing:0.05em;"></label>
                        <input asp-for="Description" class="form-control" placeholder="Short description of the transaction" style="border-radius:0.625rem;padding:0.625rem 1rem;" />
                        <span asp-validation-for="Description" class="text-danger text-xs"></span>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <label asp-for="Amount" class="form-label text-xs fw-semibold text-uppercase text-muted" style="letter-spacing:0.05em;"></label>
                            <div class="input-group" style="border-radius:0.625rem;overflow:hidden;">
                                <span class="input-group-text border-end-0" style="background:rgba(99,102,241,0.06);color:#6366f1;font-weight:600;">₱</span>
                                <input asp-for="Amount" class="form-control border-start-0" type="number" step="0.01" min="0" style="padding:0.625rem 1rem;" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger text-xs"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ReferenceNumber" class="form-label text-xs fw-semibold text-uppercase text-muted" style="letter-spacing:0.05em;"></label>
                            <input asp-for="ReferenceNumber" class="form-control" placeholder="Invoice #, Receipt #, etc." style="border-radius:0.625rem;padding:0.625rem 1rem;" />
                            <span asp-validation-for="ReferenceNumber" class="text-danger text-xs"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Notes" class="form-label text-xs fw-semibold text-uppercase text-muted" style="letter-spacing:0.05em;"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3" style="border-radius:0.625rem;padding:0.625rem 1rem;"></textarea>
                        <span asp-validation-for="Notes" class="text-danger text-xs"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-moc-primary btn-lg py-3">
                            <i class="bi bi-save me-2"></i> Save Transaction
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
