@model MobileOpsConnect.Models.AccountingEntry

@{
    ViewData["Title"] = "New Transaction";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Record New Transaction</h6>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Ledger
                </a>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="TransactionDate" class="control-label"></label>
                            <input asp-for="TransactionDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="TransactionDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Type" class="control-label"></label>
                            <select asp-for="Type" class="form-select">
                                <option value="Expense">Expense</option>
                                <option value="Income">Income</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="control-label"></label>
                        <input asp-for="Category" class="form-control" list="categoryList" placeholder="Select or type a category..." />
                        <datalist id="categoryList">
                            <option value="Purchase Order"></option>
                            <option value="Payroll"></option>
                            <option value="Sales Revenue"></option>
                            <option value="Utilities"></option>
                            <option value="Maintenance"></option>
                            <option value="Office Supplies"></option>
                        </datalist>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" placeholder="Short description of the transaction" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Amount" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">â‚±</span>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="ReferenceNumber" class="control-label"></label>
                            <input asp-for="ReferenceNumber" class="form-control" placeholder="Invoice #, Receipt #, etc." />
                            <span asp-validation-for="ReferenceNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="control-label"></label>
                        <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save me-2"></i> Save Transaction
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
