@model List<MobileOpsConnect.Models.PurchaseOrder>
@{
    ViewData["Title"] = "Purchase Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>🚚 Restock Purchase Orders</h2>
    <div class="d-flex gap-2">
        @if (User.IsInRole("WarehouseStaff"))
        {
            <a asp-action="Create" class="btn btn-moc-primary">
                <i class="bi bi-plus-circle me-1"></i> Submit New PO
            </a>
        }
        <a asp-controller="Home" asp-action="Index" class="btn btn-moc-outline">Back to Dashboard</a>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Count == 0)
{
    <div class="card moc-card border-0 shadow-sm">
        <div class="card-body p-5 text-center">
            <div class="moc-icon-box-lg bg-indigo-50 rounded-3 mx-auto mb-3">
                <i class="bi bi-inbox text-indigo fs-3"></i>
            </div>
            <h5 class="fw-bold mb-2">No Purchase Orders Yet</h5>
            <p class="text-muted">
                @if (User.IsInRole("WarehouseStaff"))
                {
                    <text>Submit your first purchase order to restock inventory.</text>
                }
                else
                {
                    <text>No purchase order requests from warehouse staff yet.</text>
                }
            </p>
        </div>
    </div>
}
else
{
    <div class="card moc-card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr style="background: var(--moc-surface);">
                            <th class="text-uppercase text-xs fw-semibold text-muted ps-4 py-3">PO #</th>
                            <th class="text-uppercase text-xs fw-semibold text-muted py-3">Product</th>
                            <th class="text-uppercase text-xs fw-semibold text-muted py-3">Qty</th>
                            <th class="text-uppercase text-xs fw-semibold text-muted py-3">Cost (₱)</th>
                            <th class="text-uppercase text-xs fw-semibold text-muted py-3">Requested By</th>
                            <th class="text-uppercase text-xs fw-semibold text-muted py-3">Date</th>
                            <th class="text-uppercase text-xs fw-semibold text-muted py-3">Status</th>
                            @if ((bool)ViewBag.CanApprove)
                            {
                                <th class="text-uppercase text-xs fw-semibold text-muted pe-4 py-3">Action</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var po in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-primary">PO-@po.Id.ToString("D4")</td>
                                <td>@(po.Product?.Name ?? "N/A")</td>
                                <td>@po.Quantity</td>
                                <td>@po.EstimatedCost.ToString("N2")</td>
                                <td>@(po.RequestedBy?.Email ?? "N/A")</td>
                                <td>@po.DateRequested.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (po.Status == "Pending")
                                    {
                                        <span class="badge rounded-pill bg-amber-50 text-amber px-3 py-2 fw-semibold text-xs">
                                            <i class="bi bi-clock-fill me-1"></i> Pending
                                        </span>
                                    }
                                    else if (po.Status == "Approved")
                                    {
                                        <span class="badge rounded-pill bg-green-50 text-green px-3 py-2 fw-semibold text-xs">
                                            <i class="bi bi-check-circle-fill me-1"></i> Approved
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge rounded-pill bg-red-50 text-red px-3 py-2 fw-semibold text-xs">
                                            <i class="bi bi-x-circle-fill me-1"></i> Rejected
                                        </span>
                                    }
                                </td>
                                @if ((bool)ViewBag.CanApprove)
                                {
                                    <td class="pe-4">
                                        @if (po.Status == "Pending")
                                        {
                                            <form asp-action="ProcessOrder" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@po.Id" />
                                                <input type="hidden" name="actionType" value="Approve" />
                                                <button type="submit" class="btn btn-sm btn-success">✅ Approve</button>
                                            </form>
                                            <form asp-action="ProcessOrder" method="post" class="d-inline ms-1">
                                                <input type="hidden" name="id" value="@po.Id" />
                                                <input type="hidden" name="actionType" value="Reject" />
                                                <button type="submit" class="btn btn-sm btn-danger">❌ Reject</button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted text-xs">
                                                @(po.Status == "Approved" ? "✅" : "❌") @po.DateProcessed?.ToString("MMM dd")
                                            </span>
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}