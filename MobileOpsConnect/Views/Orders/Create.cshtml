@{
    ViewData["Title"] = "Submit Purchase Order";
}

<!-- ═══════════════════════════════════════════════ -->
<!-- HERO BANNER                                     -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-hero p-4 p-md-5 mb-4 text-white anim-fade-in">
    <div class="position-relative" style="z-index: 2;">
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                <i class="bi bi-circle-fill text-success me-1" style="font-size:0.4rem;vertical-align:middle;"></i>
                Procurement Module
            </span>
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                <i class="bi bi-pencil-square me-1"></i> New Request
            </span>
        </div>
        <h1 class="display-5 fw-bold mb-2 letter-tight">Submit Purchase Order</h1>
        <p class="lead mb-0 opacity-75">
            Request inventory restocking &mdash; managers will review and approve
        </p>
    </div>
    <div class="position-absolute top-50 end-0 translate-middle-y d-none d-lg-block pe-none"
         style="z-index:1;opacity:0.05;font-size:15rem;line-height:1;margin-right:1.5rem;">
        <i class="bi bi-truck"></i>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- FORM SECTION                                    -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-section-header mt-2">
    <h5 class="fw-bold letter-tight">
        <i class="bi bi-cart-plus-fill text-indigo me-1"></i> Order Details
    </h5>
    <hr />
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 d-flex align-items-center gap-2 mb-4 anim-fade-in" role="alert">
        <i class="bi bi-x-circle-fill fs-5"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">

        <div class="card moc-card border-0 shadow-sm mb-4 anim-fade-in anim-delay-1">
            <div class="card-body p-4 p-md-5">

                <form asp-action="Create" method="post">

                    <!-- Product Selection -->
                    <div class="d-flex align-items-center mb-3">
                        <div class="moc-icon-box bg-indigo-50 rounded-3 me-3" style="width:40px;height:40px;min-width:40px;">
                            <i class="bi bi-box-seam-fill text-indigo"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0 letter-tight">Product</h6>
                            <span class="text-muted text-xs">Select the item to restock</span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold text-sm mb-2">
                            <i class="bi bi-box me-1 text-indigo"></i> Product <span class="text-danger">*</span>
                        </label>
                        <select name="ProductId" class="form-select form-select-lg rounded-3"
                                style="padding:0.875rem 1rem;font-size:1rem;" required>
                            <option value="">-- Select Product --</option>
                            @foreach (var item in (SelectList)ViewBag.Products)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>

                    <hr class="my-4 opacity-10" />

                    <!-- Quantity -->
                    <div class="d-flex align-items-center mb-3">
                        <div class="moc-icon-box bg-green-50 rounded-3 me-3" style="width:40px;height:40px;min-width:40px;">
                            <i class="bi bi-hash text-green"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0 letter-tight">Quantity</h6>
                            <span class="text-muted text-xs">How many units to order</span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold text-sm mb-2">
                            <i class="bi bi-layers me-1 text-green"></i> Quantity <span class="text-danger">*</span>
                        </label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text rounded-start-3 border-end-0"
                                  style="background:rgba(34,197,94,0.06);">
                                <i class="bi bi-plus-slash-minus text-green"></i>
                            </span>
                            <input type="number" name="Quantity" class="form-control rounded-end-3 border-start-0"
                                   min="1" value="1" required
                                   style="padding:0.875rem 1rem;font-size:1rem;" />
                        </div>
                    </div>

                    <hr class="my-4 opacity-10" />

                    <!-- Notes -->
                    <div class="d-flex align-items-center mb-3">
                        <div class="moc-icon-box bg-amber-50 rounded-3 me-3" style="width:40px;height:40px;min-width:40px;">
                            <i class="bi bi-chat-left-text-fill text-amber"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0 letter-tight">Notes</h6>
                            <span class="text-muted text-xs">Optional details for the approver</span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold text-sm mb-2">
                            <i class="bi bi-chat-dots me-1 text-amber"></i> Notes <span class="text-muted">(optional)</span>
                        </label>
                        <textarea name="Notes" class="form-control rounded-3" rows="4"
                                  placeholder="Reason for restocking, supplier preference, etc."
                                  style="padding:0.875rem 1rem;font-size:1rem;resize:vertical;min-height:120px;"></textarea>
                        <small class="text-muted text-xs mt-1 d-flex align-items-center">
                            <i class="bi bi-info-circle me-1 text-indigo"></i>
                            Include any urgency details or preferred supplier information.
                        </small>
                    </div>

                    <hr class="my-4 opacity-10" />

                    <!-- Policy Notice -->
                    <div class="rounded-3 p-3 mb-4 d-flex align-items-start gap-3"
                         style="background:rgba(99,102,241,0.04);border:1px solid rgba(99,102,241,0.1);">
                        <div class="moc-icon-box bg-indigo-50 rounded-3" style="width:40px;height:40px;min-width:40px;">
                            <i class="bi bi-shield-check text-indigo"></i>
                        </div>
                        <div>
                            <p class="fw-semibold text-sm mb-1 letter-tight">Procurement Policy</p>
                            <p class="text-muted text-xs mb-0">
                                Purchase orders require management approval before processing. You will be notified once
                                your request has been reviewed. Orders are processed during business hours.
                            </p>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-moc-primary btn-lg py-3">
                            <i class="bi bi-send-fill me-1"></i> Submit Purchase Order
                        </button>
                        <a asp-action="Index" class="btn btn-moc-outline btn-lg py-3">
                            <i class="bi bi-arrow-left me-1"></i> Cancel &amp; Go Back
                        </a>
                    </div>

                </form>

            </div>

            <!-- Card Footer -->
            <div class="card-footer bg-transparent border-0 px-4 py-3 text-center"
                 style="border-top:1px solid var(--moc-border);border-radius:0 0 0.875rem 0.875rem;">
                <span class="text-muted text-xs">
                    <i class="bi bi-lock-fill me-1"></i>
                    Your order is submitted securely and routed to authorized approvers.
                </span>
            </div>
        </div>

    </div>
</div>
