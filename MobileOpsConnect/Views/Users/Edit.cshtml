@model MobileOpsConnect.Models.EditUserViewModel

@{
    ViewData["Title"] = "Edit User Role";
}

<h2>Edit User: @Model.Email</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label class="control-label">Current Role: <strong>@Model.CurrentRole</strong></label>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NewRole" class="control-label">Assign New Role</label>
                <select asp-for="NewRole" asp-items="ViewBag.Roles" class="form-control">
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>