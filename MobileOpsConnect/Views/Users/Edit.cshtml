@model MobileOpsConnect.Controllers.EditUserViewModel
@{
    ViewData["Title"] = "Edit User Role";
}

<h2>Edit User: @Model.Email</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label class="control-label">Current Role: <strong>@Model.CurrentRole</strong></label>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NewRole" class="control-label">Assign New Role</label>
                <select asp-for="NewRole" class="form-control">
                    <option value="DepartmentManager">Department Manager</option>
                    <option value="WarehouseStaff">Warehouse Staff</option>
                    <option value="Employee">Employee</option>
                    @if (User.IsInRole("SuperAdmin"))
                    {
                        <option value="SystemAdmin">System Admin</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>