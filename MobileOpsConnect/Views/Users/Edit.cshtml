@model MobileOpsConnect.Models.EditUserViewModel

@{
    ViewData["Title"] = Model.IsOwnAccount ? "My Account" : "Edit User Role";
    bool isAlpha = ViewBag.IsAlpha ?? false;
    bool isOwnAccount = Model.IsOwnAccount;
}

<!-- ═══════════════════════════════════════════════ -->
<!-- PAGE HEADER                                     -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-hero p-4 p-md-5 mb-4 text-white anim-fade-in">
    <div class="position-relative" style="z-index: 2;">
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                <i class="bi bi-circle-fill text-success me-1" style="font-size:0.4rem;vertical-align:middle;"></i>
                @(isOwnAccount ? "Your Account" : "User Management")
            </span>
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                @if (Model.CurrentRole == "SuperAdmin")
                {
                    <i class="bi bi-shield-lock-fill me-1"></i> @:Alpha
                }
                else if (Model.CurrentRole == "SystemAdmin")
                {
                    <i class="bi bi-gear-fill me-1"></i> @:Beta
                }
                else
                {
                    <i class="bi bi-person-badge me-1"></i> @Model.CurrentRole
                }
            </span>
        </div>
        <h1 class="display-5 fw-bold mb-2 letter-tight">
            @(isOwnAccount ? "My Account" : "Edit User")
        </h1>
        <p class="lead mb-0 opacity-75">
            @(isOwnAccount ? "Manage your SuperAdmin (Alpha) account settings" : $"Editing account: {Model.Email}")
        </p>
    </div>
    <div class="position-absolute top-50 end-0 translate-middle-y d-none d-lg-block pe-none"
         style="z-index:1;opacity:0.05;font-size:15rem;line-height:1;margin-right:1.5rem;">
        <i class="bi bi-@(isOwnAccount ? "shield-lock-fill" : "pencil-square")"></i>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- ERROR / DELETE-ERROR ALERTS                     -->
<!-- ═══════════════════════════════════════════════ -->
@if (TempData["DeleteError"] != null)
{
    <div class="alert border-0 shadow-sm rounded-3 mb-4 anim-fade-in"
         role="alert"
         style="background: rgba(239,68,68,0.08); color: #dc2626; border-left: 4px solid #ef4444 !important;">
        <div class="d-flex align-items-center">
            <div class="moc-icon-box bg-red-50 rounded-3 me-3">
                <i class="bi bi-x-circle-fill text-red fs-5"></i>
            </div>
            <div>
                <span class="fw-semibold">Error!</span>
                <span class="text-sm ms-1">@TempData["DeleteError"]</span>
            </div>
        </div>
    </div>
}

@if (isOwnAccount && isAlpha)
{
    <!-- ═══════════════════════════════════════════════ -->
    <!-- ALPHA'S OWN ACCOUNT VIEW                       -->
    <!-- ═══════════════════════════════════════════════ -->

    <!-- Highest Role Banner -->
    <div class="moc-section-header mt-2">
        <h5 class="fw-bold letter-tight">
            <i class="bi bi-shield-lock-fill text-red me-1"></i> Account Status
        </h5>
        <hr />
    </div>

    <div class="card moc-card border-0 shadow-sm mb-4 anim-fade-in anim-delay-1">
        <div class="card-body p-4">
            <div class="d-flex align-items-center gap-3 mb-3">
                <div class="moc-icon-box-lg bg-red-50 rounded-3">
                    <i class="bi bi-shield-lock-fill text-red fs-4"></i>
                </div>
                <div class="flex-grow-1">
                    <h5 class="fw-bold mb-1 letter-tight">SuperAdmin &bull; Alpha</h5>
                    <p class="text-muted text-sm mb-0">You hold the highest role in the system</p>
                </div>
            </div>

            <div class="row g-3 mt-3">
                <div class="col-md-6">
                    <div class="moc-metric p-3 h-100">
                        <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Email</p>
                        <h6 class="fw-bold mb-1 letter-tight text-break">@Model.Email</h6>
                        <span class="badge bg-green-50 text-green text-xs fw-semibold">
                            <i class="bi bi-check-circle-fill me-1"></i> Verified
                        </span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="moc-metric p-3 h-100">
                        <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Role</p>
                        <h6 class="fw-bold mb-1 letter-tight">SuperAdmin (Alpha)</h6>
                        <span class="badge bg-red-50 text-red text-xs fw-semibold">
                            <i class="bi bi-lock-fill me-1"></i> Immutable
                        </span>
                    </div>
                </div>
            </div>

            <div class="alert border-0 rounded-3 mt-4 mb-0 py-3"
                 style="background: rgba(99,102,241,0.06); color: #6366f1; border-left: 4px solid #6366f1 !important;">
                <div class="d-flex align-items-center">
                    <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                    <div class="text-sm">
                        <strong>No role changes available.</strong>
                        You already hold the highest role. This role cannot be demoted or promoted.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Danger Zone — Delete Account -->
    <div class="moc-section-header mt-5">
        <h5 class="fw-bold letter-tight">
            <i class="bi bi-exclamation-triangle-fill text-danger me-1"></i> Danger Zone
        </h5>
        <hr />
    </div>

    <div class="card border-0 shadow-sm mb-4 anim-fade-in anim-delay-2"
         style="border-left: 4px solid #ef4444 !important; background: var(--moc-surface);">
        <div class="card-body p-4">
            <div class="d-flex align-items-start gap-3 mb-3">
                <div class="moc-icon-box bg-red-50 rounded-3">
                    <i class="bi bi-trash3-fill text-red fs-5"></i>
                </div>
                <div>
                    <h6 class="fw-bold mb-1 letter-tight text-danger">Delete My Account</h6>
                    <p class="text-muted text-sm mb-0">
                        Permanently remove your SuperAdmin account. This action is <strong>irreversible</strong>
                        and you will lose all administrative privileges immediately.
                    </p>
                </div>
            </div>
            <button type="button" class="btn btn-danger px-4 py-2" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                <i class="bi bi-trash3 me-1"></i> Delete My Account
            </button>
        </div>
    </div>

    <!-- Delete Account Modal (Double Confirmation) -->
    <div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg" style="border-radius: 1rem;">
                <div class="modal-header border-0 pb-0" style="background: rgba(239,68,68,0.04);">
                    <div class="d-flex align-items-center gap-2">
                        <div class="moc-icon-box bg-red-50 rounded-3">
                            <i class="bi bi-exclamation-triangle-fill text-red fs-5"></i>
                        </div>
                        <h5 class="modal-title fw-bold" id="deleteAccountModalLabel">Confirm Account Deletion</h5>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body px-4 py-4">
                    <div class="alert border-0 rounded-3 mb-3 py-3"
                         style="background: rgba(239,68,68,0.06); color: #dc2626;">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-shield-exclamation me-2 fs-5 mt-1"></i>
                            <div class="text-sm">
                                <strong>Warning:</strong> You are about to permanently delete your SuperAdmin account
                                (<strong>@Model.Email</strong>). This cannot be undone.
                            </div>
                        </div>
                    </div>
                    <p class="text-muted text-sm mb-3">
                        To confirm this action, please enter your current password:
                    </p>
                    <form asp-action="DeleteSelf" method="post" id="deleteAccountForm">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label fw-semibold text-sm">
                                <i class="bi bi-lock-fill me-1 text-red"></i> Your Password
                            </label>
                            <input type="password" class="form-control form-control-lg rounded-3" id="confirmPassword"
                                   name="password" required placeholder="Enter your password to confirm"
                                   autocomplete="current-password" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-0 pt-0 px-4 pb-4">
                    <button type="button" class="btn btn-moc-outline px-4 py-2" data-bs-dismiss="modal">
                        <i class="bi bi-x-lg me-1"></i> Cancel
                    </button>
                    <button type="submit" form="deleteAccountForm" class="btn btn-danger px-4 py-2" id="confirmDeleteBtn" disabled>
                        <i class="bi bi-trash3 me-1"></i> Permanently Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Enable delete button only when password is typed -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var pwd = document.getElementById('confirmPassword');
            var btn = document.getElementById('confirmDeleteBtn');
            pwd.addEventListener('input', function () {
                btn.disabled = pwd.value.trim().length < 1;
            });
        });
    </script>
}
else
{
    <!-- ═══════════════════════════════════════════════ -->
    <!-- STANDARD EDIT VIEW (Editing another user)      -->
    <!-- ═══════════════════════════════════════════════ -->

    <div class="moc-section-header mt-2">
        <h5 class="fw-bold letter-tight">
            <i class="bi bi-pencil-square text-indigo me-1"></i> Role Assignment
        </h5>
        <hr />
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card moc-card border-0 shadow-sm mb-4 anim-fade-in anim-delay-1">
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Current Role Display -->
                        <div class="moc-metric p-3 mb-4">
                            <div class="d-flex align-items-center gap-3">
                                @if (Model.CurrentRole == "SuperAdmin")
                                {
                                    <div class="moc-icon-box bg-red-50 rounded-circle">
                                        <i class="bi bi-shield-lock-fill text-red"></i>
                                    </div>
                                }
                                else if (Model.CurrentRole == "SystemAdmin")
                                {
                                    <div class="moc-icon-box bg-amber-50 rounded-circle">
                                        <i class="bi bi-gear-fill text-amber"></i>
                                    </div>
                                }
                                else
                                {
                                    <div class="moc-icon-box bg-indigo-50 rounded-circle">
                                        <i class="bi bi-person-fill text-indigo"></i>
                                    </div>
                                }
                                <div>
                                    <p class="text-muted text-uppercase text-xs fw-semibold mb-0">Current Role</p>
                                    <h6 class="fw-bold mb-0 letter-tight">@Model.CurrentRole</h6>
                                </div>
                            </div>
                        </div>

                        <!-- New Role Selector -->
                        <div class="mb-4">
                            <label asp-for="NewRole" class="form-label fw-semibold text-sm mb-2">
                                <i class="bi bi-arrow-repeat me-1 text-indigo"></i> Assign New Role
                            </label>
                            <select asp-for="NewRole" asp-items="ViewBag.Roles" class="form-select form-select-lg rounded-3">
                            </select>
                            <small class="text-muted text-xs mt-2 d-flex align-items-center">
                                <i class="bi bi-info-circle me-1 text-indigo"></i>
                                @if (isAlpha)
                                {
                                    @:Select <strong>SuperAdmin</strong> to promote this user to Alpha.
                                }
                                else
                                {
                                    @:Changing the role will update this user's permissions immediately.
                                }
                            </small>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-moc-primary flex-fill py-3">
                                <i class="bi bi-check2-circle me-1"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-moc-outline flex-fill py-3">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<!-- ═══════════════════════════════════════════════ -->
<!-- BACK TO DIRECTORY                               -->
<!-- ═══════════════════════════════════════════════ -->
<div class="d-flex justify-content-start mb-4 anim-fade-in">
    <a asp-action="Index" class="btn btn-moc-outline px-4 py-2">
        <i class="bi bi-arrow-left me-1"></i> Back to User Directory
    </a>
</div>