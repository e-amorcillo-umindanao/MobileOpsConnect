@model MobileOpsConnect.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<h2>Reset Password for @Model.Email</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ResetPassword">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="NewPassword" class="control-label">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-danger">Reset Password</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>