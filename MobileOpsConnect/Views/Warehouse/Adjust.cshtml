@model MobileOpsConnect.Models.Product

@{
    ViewData["Title"] = "Adjust Stock";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-dark text-white text-center">
                    <h3>@Model.Name</h3>
                    <small>SKU: @Model.SKU</small>
                </div>

                <div class="card-body text-center">
                    <h1 class="display-1 fw-bold text-primary mb-4">@Model.StockQuantity</h1>
                    <p class="text-muted">Current Stock Level</p>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <hr />

                    <div class="row g-3">
                        <!-- Stock In Form -->
                        <div class="col-12">
                            <div class="p-3 border rounded-3 bg-light">
                                <h5 class="text-success mb-3"><i class="bi bi-box-arrow-in-down"></i> Stock In</h5>
                                <form asp-action="StockIn">
                                    <input type="hidden" name="id" value="@Model.ProductID" />
                                    <div class="row g-2">
                                        <div class="col-md-4">
                                            <label class="form-label small fw-bold text-muted">Quantity</label>
                                            <input type="number" name="quantity" class="form-control" placeholder="0" required min="1">
                                        </div>
                                        <div class="col-md-8">
                                            <label class="form-label small fw-bold text-muted">Reason / Notes</label>
                                            <div class="input-group">
                                                <input type="text" name="notes" class="form-control" placeholder="e.g. Supplier Delivery" required>
                                                <button type="submit" class="btn btn-success fw-bold px-4">
                                                    ➕ Add
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <!-- Stock Out Form -->
                        <div class="col-12">
                            <div class="p-3 border rounded-3 bg-light mt-2">
                                <h5 class="text-danger mb-3"><i class="bi bi-box-arrow-up"></i> Stock Out</h5>
                                <form asp-action="StockOut">
                                    <input type="hidden" name="id" value="@Model.ProductID" />
                                    <div class="row g-2">
                                        <div class="col-md-4">
                                            <label class="form-label small fw-bold text-muted">Quantity</label>
                                            <input type="number" name="quantity" class="form-control" placeholder="0" required min="1">
                                        </div>
                                        <div class="col-md-8">
                                            <label class="form-label small fw-bold text-muted">Reason / Notes</label>
                                            <div class="input-group">
                                                <input type="text" name="notes" class="form-control" placeholder="e.g. Customer Sale / Damaged" required>
                                                <button type="submit" class="btn btn-danger fw-bold px-4">
                                                    ➖ Remove
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-secondary">Back to Scanner</a>
                </div>
            </div>
        </div>
    </div>
</div>