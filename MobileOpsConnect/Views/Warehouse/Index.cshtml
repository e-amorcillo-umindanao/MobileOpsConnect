@model IEnumerable<MobileOpsConnect.Models.Product>

@{
    ViewData["Title"] = "Warehouse Operations";
    int totalProducts = Model.Count();
    int lowStockCount = Model.Count(p => p.StockQuantity <= 10);
}

<!-- ═══════════════════════════════════════════════ -->
<!-- HERO BANNER                                     -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-hero p-4 p-md-5 mb-4 text-white anim-fade-in">
    <div class="position-relative" style="z-index: 2;">
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                <i class="bi bi-shop text-success me-1" style="font-size:0.8rem;vertical-align:text-top;"></i>
                Warehouse Floor
            </span>
             @if (lowStockCount > 0)
            {
                <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(239,68,68,0.25);">
                    <i class="bi bi-exclamation-triangle-fill me-1"></i> @lowStockCount Items Low
                </span>
            }
        </div>
        <h1 class="display-5 fw-bold mb-2 letter-tight">Warehouse Operations</h1>
        <p class="lead mb-0 opacity-75">
            Scan products, manage stock levels, and verify inventory in real-time.
        </p>
    </div>
    <!-- Decorative Icon -->
    <div class="position-absolute top-50 end-0 translate-middle-y d-none d-lg-block pe-none"
         style="z-index:1;opacity:0.05;font-size:15rem;line-height:1;margin-right:1.5rem;">
        <i class="bi bi-upc-scan"></i>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- ACTION BAR                                      -->
<!-- ═══════════════════════════════════════════════ -->
<div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4 anim-fade-in anim-delay-1">
    <div class="d-flex align-items-center gap-2">
        <a asp-controller="Home" asp-action="Index" class="btn btn-moc-outline px-3">
            <i class="bi bi-arrow-left me-1"></i> Dashboard
        </a>
    </div>
    
    <form asp-action="Index" method="get" id="scanForm" class="d-flex gap-2 flex-grow-1 justify-content-end" style="max-width: 600px;">
        <div class="input-group shadow-sm" style="border-radius: 0.625rem; overflow: hidden;">
            <button type="button" class="btn btn-dark px-3" data-bs-toggle="modal" data-bs-target="#scannerModal">
                <i class="bi bi-camera-fill me-1"></i> Scan
            </button>
            <input type="text" name="searchString" id="barcodeInput" class="form-control border-0 bg-white" placeholder="Scan SKU or Search Product..." value="@ViewData["CurrentFilter"]" style="padding: 0.6rem 1rem;">
             <button class="btn btn-moc-primary px-3" type="submit">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- PRODUCT TABLE                                   -->
<!-- ═══════════════════════════════════════════════ -->
<div class="card moc-card border-0 shadow-sm mb-4 anim-fade-in anim-delay-2">
    <div class="card-header bg-transparent border-0 p-4 pb-0">
        <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
            <div class="d-flex align-items-center gap-2">
                <div class="moc-icon-box bg-purple-50 rounded-3">
                    <i class="bi bi-box-seam text-purple fs-5"></i>
                </div>
                <div>
                    <h6 class="fw-bold mb-0 letter-tight">Product List</h6>
                    <span class="text-muted text-xs">@totalProducts item@(totalProducts != 1 ? "s" : "") found</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" style="border-collapse:separate;border-spacing:0 0.5rem;">
                <thead class="bg-light">
                    <tr>
                        <th class="text-uppercase text-xs fw-semibold text-muted border-0 ps-4 py-3" style="width: 15%; letter-spacing:0.05em;">SKU</th>
                        <th class="text-uppercase text-xs fw-semibold text-muted border-0 py-3" style="width: 30%; letter-spacing:0.05em;">Product Name</th>
                        <th class="text-uppercase text-xs fw-semibold text-muted border-0 py-3" style="width: 15%; letter-spacing:0.05em;">Category</th>
                        <th class="text-uppercase text-xs fw-semibold text-muted border-0 py-3 text-center" style="width: 15%; letter-spacing:0.05em;">Stock</th>
                        <th class="text-uppercase text-xs fw-semibold text-muted border-0 pe-4 py-3 text-center" style="width: 25%; letter-spacing:0.05em;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="transition: transform 0.2s;">
                            <td class="border-0 ps-4 py-3">
                                <span class="badge rounded-pill bg-indigo-50 text-indigo px-2 py-1 fw-semibold text-xs">
                                    @item.SKU
                                </span>
                            </td>
                            <td class="border-0 py-3">
                                <div class="d-flex align-items-center gap-2">
                                    <div class="moc-icon-box bg-light rounded-2" style="width:32px;height:32px;min-width:32px;">
                                        <i class="bi bi-box text-muted" style="font-size:0.8rem;"></i>
                                    </div>
                                    <span class="fw-bold text-sm text-dark">@item.Name</span>
                                </div>
                            </td>
                            <td class="border-0 py-3">
                                <span class="badge rounded-pill bg-cyan-50 text-cyan px-2 py-1 fw-semibold text-xs">
                                    @item.Category
                                </span>
                            </td>
                            <td class="text-center border-0 py-3">
                                @if (item.StockQuantity <= 10)
                                {
                                    <span class="badge rounded-pill bg-red-50 text-red px-3 py-2 fw-semibold text-xs">
                                         <i class="bi bi-exclamation-triangle-fill me-1"></i> @item.StockQuantity
                                    </span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-green-50 text-green px-3 py-2 fw-semibold text-xs">
                                         <i class="bi bi-check-circle-fill me-1"></i> @item.StockQuantity
                                    </span>
                                }
                            </td>
                            <td class="text-center border-0 pe-4 py-3">
                                <a asp-action="Adjust" asp-route-id="@item.ProductID" class="btn btn-moc-outline btn-sm px-3 py-1">
                                    <i class="bi bi-sliders me-1"></i> Manage
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- SCANNER MODAL                                   -->
<!-- ═══════════════════════════════════════════════ -->
<div class="modal fade" id="scannerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 1rem;">
            <div class="modal-header bg-dark text-white border-0" style="border-radius: 1rem 1rem 0 0;">
                <h5 class="modal-title fs-6 fw-bold"><i class="bi bi-qr-code-scan me-2"></i>Barcode Scanner</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <div id="reader" class="overflow-hidden rounded-3 shadow-sm bg-light mb-3"></div>
                <p class="text-muted small mb-0" id="scanStatus">
                    <i class="bi bi-camera-fill me-1"></i> Point your camera at a product barcode.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/html5-qrcode@2.3.8/html5-qrcode.min.js"></script>
    <script>
        let html5QrcodeScanner = null;

        // Start scanner when modal opens
        document.getElementById('scannerModal').addEventListener('shown.bs.modal', function () {
            if (html5QrcodeScanner) return; // Already running

            html5QrcodeScanner = new Html5Qrcode("reader");

            html5QrcodeScanner.start(
                { facingMode: "environment" }, // Use back camera
                {
                    fps: 10,
                    qrbox: { width: 250, height: 150 },
                    aspectRatio: 1.5
                },
                (decodedText) => {
                    // SUCCESS
                    document.getElementById('scanStatus').innerHTML =
                        '<span class="text-success fw-bold"><i class="bi bi-check-circle-fill me-1"></i> Scanned: ' + decodedText + '</span>';

                    // Stop the scanner
                    html5QrcodeScanner.stop().then(() => {
                        html5QrcodeScanner = null;

                        // Close modal, populate search, submit
                        var modalEl = document.getElementById('scannerModal');
                        var modal = bootstrap.Modal.getInstance(modalEl);
                        modal.hide();

                        document.getElementById('barcodeInput').value = decodedText;
                        document.getElementById('scanForm').submit();
                    });
                },
                (errorMessage) => {
                    // Ignore scan errors
                }
            ).catch((err) => {
                document.getElementById('scanStatus').innerHTML =
                    '<span class="text-danger"><i class="bi bi-exclamation-triangle-fill me-1"></i> Camera access denied.</span>';
                console.error("html5-qrcode start error:", err);
            });
        });

        // Stop scanner when modal closes
        document.getElementById('scannerModal').addEventListener('hidden.bs.modal', function () {
            if (html5QrcodeScanner) {
                html5QrcodeScanner.stop().then(() => {
                    html5QrcodeScanner = null;
                    document.getElementById('scanStatus').innerHTML =
                        '<i class="bi bi-camera-fill me-1"></i> Point your camera at a product barcode.';
                }).catch(() => { html5QrcodeScanner = null; });
            }
        });
    </script>
}