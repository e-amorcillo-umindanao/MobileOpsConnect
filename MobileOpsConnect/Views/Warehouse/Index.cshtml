@model IEnumerable<MobileOpsConnect.Models.Product>

@{
    ViewData["Title"] = "Warehouse Operations";
    var lowStockList = ViewBag.LowStockItems as List<MobileOpsConnect.Models.Product>;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-5 mb-0">🏭 Warehouse Operations</h1>
        <p class="text-muted mb-0 mt-1">Scan barcodes or search manually to perform Stock In/Out.</p>
    </div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary shadow-sm">🔙 Back to Dashboard</a>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" id="scanForm">
            <div class="input-group input-group-lg shadow-sm">
                <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#scannerModal">
                    📷 Camera Scan
                </button>
                <input type="text" name="searchString" id="barcodeInput" class="form-control" placeholder="Scan SKU or Enter Product Name..." value="@ViewData["CurrentFilter"]" autofocus>
                <button class="btn btn-primary" type="submit">Search</button>
                <a asp-controller="Products" asp-action="Create" class="btn btn-success">➕ New Item</a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 15%;">SKU</th>
                        <th style="width: 30%;">Product Name</th>
                        <th style="width: 15%;">Category</th>
                        <th style="width: 15%;" class="text-center">Current Stock</th>
                        <th style="width: 25%;" class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold text-muted">@item.SKU</td>
                            <td class="fw-bold">@item.Name</td>
                            <td><span class="badge bg-secondary">@item.Category</span></td>
                            <td class="text-center">
                                <h5 class="mb-0">
                                    @if (item.StockQuantity <= 10)
                                    {
                                        <span class="badge bg-danger shadow-sm">@item.StockQuantity</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success shadow-sm">@item.StockQuantity</span>
                                    }
                                </h5>
                            </td>
                            <td class="text-center">
                                <a asp-action="Adjust" asp-route-id="@item.ProductID" class="btn btn-outline-primary btn-sm fw-bold px-3">
                                    ⚙️ Manage Stock
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="scannerModal" tabindex="-1" aria-labelledby="scannerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="scannerModalLabel">📷 Barcode Scanner</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div id="reader" style="width: 100%; border-radius: 8px; overflow: hidden;"></div>
                <p class="text-muted small mt-3 mb-0" id="scanStatus">
                    <i class="bi bi-camera-fill me-1"></i> Point your device camera at a product barcode to scan.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/html5-qrcode@2.3.8/html5-qrcode.min.js"></script>
    <script>
        let html5QrcodeScanner = null;

        // Start scanner when modal opens
        document.getElementById('scannerModal').addEventListener('shown.bs.modal', function () {
            if (html5QrcodeScanner) return; // Already running

            html5QrcodeScanner = new Html5Qrcode("reader");

            html5QrcodeScanner.start(
                { facingMode: "environment" }, // Use back camera
                {
                    fps: 10,
                    qrbox: { width: 250, height: 150 },
                    aspectRatio: 1.5
                },
                (decodedText) => {
                    // SUCCESS — barcode scanned!
                    document.getElementById('scanStatus').innerHTML =
                        '<span class="text-success fw-bold"><i class="bi bi-check-circle-fill me-1"></i> Scanned: ' + decodedText + '</span>';

                    // Stop the scanner
                    html5QrcodeScanner.stop().then(() => {
                        html5QrcodeScanner = null;

                        // Close modal, populate search, submit
                        var modalEl = document.getElementById('scannerModal');
                        var modal = bootstrap.Modal.getInstance(modalEl);
                        modal.hide();

                        document.getElementById('barcodeInput').value = decodedText;
                        document.getElementById('scanForm').submit();
                    });
                },
                (errorMessage) => {
                    // Scan errors are normal (frames without barcode) — ignore silently
                }
            ).catch((err) => {
                document.getElementById('scanStatus').innerHTML =
                    '<span class="text-danger"><i class="bi bi-exclamation-triangle-fill me-1"></i> Camera access denied or unavailable. Please allow camera permissions.</span>';
                console.error("html5-qrcode start error:", err);
            });
        });

        // Stop scanner when modal closes
        document.getElementById('scannerModal').addEventListener('hidden.bs.modal', function () {
            if (html5QrcodeScanner) {
                html5QrcodeScanner.stop().then(() => {
                    html5QrcodeScanner = null;
                    document.getElementById('scanStatus').innerHTML =
                        '<i class="bi bi-camera-fill me-1"></i> Point your device camera at a product barcode to scan.';
                }).catch(() => { html5QrcodeScanner = null; });
            }
        });
    </script>
}