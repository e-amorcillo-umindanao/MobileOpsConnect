@model List<MobileOpsConnect.Models.AuditLog>
@{
    bool isSuperAdmin = (bool)ViewBag.IsSuperAdmin;
    ViewData["Title"] = isSuperAdmin ? "Global Audit Logs" : "Standard Audit Logs";
    int totalEvents = ViewBag.TotalEvents;
    int loginCount = ViewBag.LoginCount;
    int dataCount = ViewBag.CreateCount;
    int stockCount = ViewBag.StockCount;
    int securityCount = ViewBag.SecurityCount;
}

<!-- ═══════════════════════════════════════════════ -->
<!-- HERO BANNER                                     -->
<!-- ═══════════════════════════════════════════════ -->
<section style="background: linear-gradient(135deg, #1e1b4b 0%, #4338ca 50%, #6366f1 100%);
               border-radius: 1.25rem; padding: 3rem 2.5rem; margin-bottom: 2rem;
               position: relative; overflow: hidden;">
    <!-- Decorative overlay removed due to Razor parsing issue with inline SVG -->
    <div class="row align-items-center position-relative" style="z-index:2;">
        <div class="col">
            <div class="d-flex align-items-center gap-3 mb-2">
                <div style="width:48px;height:48px;border-radius:12px;background:rgba(255,255,255,0.15);backdrop-filter:blur(10px);display:flex;align-items:center;justify-content:center;">
                    <i class="bi bi-shield-lock-fill text-white fs-4"></i>
                </div>
                <div>
                    <h2 class="fw-bold text-white mb-0 letter-tight" style="font-size:1.5rem;">
                        @(isSuperAdmin ? "🔒 Global Audit Logs" : "📋 Standard Audit Logs")
                    </h2>
                    <span style="color:rgba(255,255,255,0.6);" class="text-sm">
                        @(isSuperAdmin ? "Complete system activity — including security events" : "General system activity log")
                    </span>
                </div>
            </div>
        </div>
        <div class="col-auto">
            <a asp-controller="Home" asp-action="Index" class="btn" style="background:rgba(255,255,255,0.15);color:#fff;border:1px solid rgba(255,255,255,0.2);backdrop-filter:blur(10px);border-radius:0.75rem;">
                <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
            </a>
        </div>
    </div>
</section>

<!-- ═══════════════════════════════════════════════ -->
<!-- METRICS                                         -->
<!-- ═══════════════════════════════════════════════ -->
<div class="row g-3 mb-4">
    <div class="col-6 col-md-3">
        <div class="moc-metric p-3" style="border-left: 3px solid var(--moc-indigo);">
            <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Total Events</p>
            <h3 class="fw-bold mb-0" style="color:var(--moc-indigo);">@totalEvents</h3>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="moc-metric p-3" style="border-left: 3px solid var(--moc-cyan);">
            <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Data Changes</p>
            <h3 class="fw-bold mb-0" style="color:var(--moc-cyan);">@dataCount</h3>
        </div>
    </div>
    <div class="col-6 col-md-3">
        <div class="moc-metric p-3" style="border-left: 3px solid var(--moc-green);">
            <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Stock Moves</p>
            <h3 class="fw-bold mb-0" style="color:var(--moc-green);">@stockCount</h3>
        </div>
    </div>
    @if (isSuperAdmin)
    {
        <div class="col-6 col-md-3">
            <div class="moc-metric p-3" style="border-left: 3px solid var(--moc-red);">
                <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Security Events</p>
                <h3 class="fw-bold mb-0" style="color:var(--moc-red);">@securityCount</h3>
            </div>
        </div>
    }
    else
    {
        <div class="col-6 col-md-3">
            <div class="moc-metric p-3" style="border-left: 3px solid var(--moc-amber);">
                <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Login Events</p>
                <h3 class="fw-bold mb-0" style="color:var(--moc-amber);">@loginCount</h3>
            </div>
        </div>
    }
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- LOG TABLE                                       -->
<!-- ═══════════════════════════════════════════════ -->
<div class="card moc-card border-0 shadow-sm">
    <div class="card-header bg-transparent border-0 p-4 pb-0">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-journal-text text-indigo fs-5"></i>
                <h6 class="fw-bold mb-0 letter-tight">
                    @(isSuperAdmin ? "All Activity" : "Activity Log")
                </h6>
            </div>
            @if (isSuperAdmin)
            {
                <span class="badge rounded-pill bg-red-50 text-red px-3 py-2 fw-semibold text-xs">
                    <i class="bi bi-shield-fill-exclamation me-1"></i> Global Access
                </span>
            }
            else
            {
                <span class="badge rounded-pill bg-indigo-50 text-indigo px-3 py-2 fw-semibold text-xs">
                    <i class="bi bi-eye-fill me-1"></i> Standard View
                </span>
            }
        </div>
    </div>
    <div class="card-body p-0">
        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <i class="bi bi-shield-check text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mt-2">No audit events recorded yet. Events will appear here as users interact with the system.</p>
            </div>
        }
        else
        {
            <!-- ══════ DESKTOP TABLE (hidden on small screens) ══════ -->
            <div class="table-responsive d-none d-md-block">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr style="background: var(--moc-surface);">
                            <th class="text-uppercase text-xs fw-semibold text-muted ps-4 py-3">Timestamp</th>
                            <th class="text-uppercase text-xs fw-semibold text-muted py-3">User</th>
                            <th class="text-uppercase text-xs fw-semibold text-muted py-3">Action</th>
                            <th class="text-uppercase text-xs fw-semibold text-muted py-3">Details</th>
                            <th class="text-uppercase text-xs fw-semibold text-muted pe-4 py-3">IP</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            var actionBadge = log.Action switch
                            {
                                "LOGIN" => "bg-green-50 text-green",
                                "CREATE" => "bg-cyan-50 text-cyan",
                                "UPDATE" => "bg-indigo-50 text-indigo",
                                "DELETE" => "bg-red-50 text-red",
                                "STOCK_IN" => "bg-green-50 text-green",
                                "STOCK_OUT" => "bg-amber-50 text-amber",
                                "APPROVE" => "bg-green-50 text-green",
                                "REJECT" => "bg-red-50 text-red",
                                "SECURITY" => "bg-red-50 text-red",
                                _ => "bg-purple-50 text-purple"
                            };
                            var actionIcon = log.Action switch
                            {
                                "LOGIN" => "bi-box-arrow-in-right",
                                "CREATE" => "bi-plus-circle-fill",
                                "UPDATE" => "bi-pencil-fill",
                                "DELETE" => "bi-trash-fill",
                                "STOCK_IN" => "bi-arrow-down-circle-fill",
                                "STOCK_OUT" => "bi-arrow-up-circle-fill",
                                "APPROVE" => "bi-check-circle-fill",
                                "REJECT" => "bi-x-circle-fill",
                                "SECURITY" => "bi-shield-fill-exclamation",
                                _ => "bi-activity"
                            };
                            var rowStyle = log.IsCritical ? "background: rgba(239,68,68,0.03);" : "";
                            <tr style="@rowStyle">
                                <td class="ps-4">
                                    <span class="text-sm">@log.Timestamp.ToString("MMM dd, yyyy")</span>
                                    <br />
                                    <span class="text-xs text-muted">@log.Timestamp.ToString("hh:mm:ss tt")</span>
                                </td>
                                <td>
                                    <span class="fw-semibold text-sm">@log.UserEmail</span>
                                    @if (!string.IsNullOrEmpty(log.UserRole))
                                    {
                                        <br />
                                        <span class="text-xs text-muted">@log.UserRole</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge rounded-pill @actionBadge px-3 py-2 fw-semibold text-xs">
                                        <i class="bi @actionIcon me-1"></i> @log.Action.Replace("_", " ")
                                    </span>
                                    @if (log.IsCritical)
                                    {
                                        <i class="bi bi-exclamation-triangle-fill text-danger ms-1" title="Security Event"></i>
                                    }
                                </td>
                                <td>
                                    <span class="text-sm" style="max-width:300px;display:inline-block;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;" title="@log.Details">
                                        @log.Details
                                    </span>
                                </td>
                                <td class="pe-4">
                                    <span class="text-xs text-muted font-monospace">@log.IpAddress</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- ══════ MOBILE CARDS (visible only on small screens) ══════ -->
            <div class="d-md-none p-3">
                @foreach (var log in Model)
                {
                    var actionBadge = log.Action switch
                    {
                        "LOGIN" => "bg-green-50 text-green",
                        "CREATE" => "bg-cyan-50 text-cyan",
                        "UPDATE" => "bg-indigo-50 text-indigo",
                        "DELETE" => "bg-red-50 text-red",
                        "STOCK_IN" => "bg-green-50 text-green",
                        "STOCK_OUT" => "bg-amber-50 text-amber",
                        "APPROVE" => "bg-green-50 text-green",
                        "REJECT" => "bg-red-50 text-red",
                        "SECURITY" => "bg-red-50 text-red",
                        _ => "bg-purple-50 text-purple"
                    };
                    var actionIcon = log.Action switch
                    {
                        "LOGIN" => "bi-box-arrow-in-right",
                        "CREATE" => "bi-plus-circle-fill",
                        "UPDATE" => "bi-pencil-fill",
                        "DELETE" => "bi-trash-fill",
                        "STOCK_IN" => "bi-arrow-down-circle-fill",
                        "STOCK_OUT" => "bi-arrow-up-circle-fill",
                        "APPROVE" => "bi-check-circle-fill",
                        "REJECT" => "bi-x-circle-fill",
                        "SECURITY" => "bi-shield-fill-exclamation",
                        _ => "bi-activity"
                    };
                    var cardBorder = log.IsCritical ? "border-left: 3px solid var(--moc-red);" : "border-left: 3px solid var(--moc-indigo);";
                    <div class="mb-3 p-3 rounded-3 shadow-sm" style="background: var(--moc-surface, #f8f9fa); @cardBorder">
                        <!-- Row 1: User + Action -->
                        <div class="d-flex align-items-start justify-content-between mb-2">
                            <div style="min-width:0; flex:1;">
                                <span class="fw-semibold text-sm d-block" style="word-break:break-all;">@log.UserEmail</span>
                                @if (!string.IsNullOrEmpty(log.UserRole))
                                {
                                    <span class="text-xs text-muted">@log.UserRole</span>
                                }
                            </div>
                            <div class="ms-2 flex-shrink-0">
                                <span class="badge rounded-pill @actionBadge px-2 py-1 fw-semibold text-xs">
                                    <i class="bi @actionIcon me-1"></i> @log.Action.Replace("_", " ")
                                </span>
                                @if (log.IsCritical)
                                {
                                    <i class="bi bi-exclamation-triangle-fill text-danger ms-1" title="Security Event"></i>
                                }
                            </div>
                        </div>
                        <!-- Row 2: Details (full text, wrapped) -->
                        <p class="text-sm mb-2" style="word-break:break-word;">@log.Details</p>
                        <!-- Row 3: Timestamp + IP -->
                        <div class="d-flex align-items-center justify-content-between text-muted">
                            <span class="text-xs">
                                <i class="bi bi-clock me-1"></i>@log.Timestamp.ToString("MMM dd, yyyy hh:mm tt")
                            </span>
                            <span class="text-xs font-monospace">@log.IpAddress</span>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
