@model MobileOpsConnect.Models.SystemSetting

@{
    ViewData["Title"] = "System Configuration";
}

<div class="row justify-content-center mt-2">
    <div class="col-lg-8 col-xl-7">

        <!-- Page Header -->
        <div class="d-flex align-items-center mb-4 anim-fade-in">
            <div class="moc-icon-box-lg bg-amber-50 rounded-3 me-3">
                <i class="bi bi-gear-wide-connected text-amber fs-4"></i>
            </div>
            <div>
                <h3 class="fw-bold mb-0 letter-tight">System Configuration</h3>
                <p class="text-muted text-sm mb-0">Manage global settings and system parameters</p>
            </div>
        </div>

        <!-- Success Alert -->
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm rounded-3" role="alert">
                <div class="d-flex align-items-center">
                    <i class="bi bi-check-circle-fill me-2 fs-5"></i>
                    <span>@ViewBag.Message</span>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Settings Card -->
        <div class="card moc-card-static shadow-sm anim-fade-in anim-delay-1">
            <div class="card-body p-4 p-md-5">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />

                    <!-- General Information Section -->
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-building text-indigo fs-5 me-2"></i>
                        <h5 class="fw-semibold mb-0">General Information</h5>
                    </div>
                    <hr class="mb-4 opacity-10" />

                    <div class="mb-3">
                        <label asp-for="CompanyName" class="form-label fw-semibold text-sm"></label>
                        <input asp-for="CompanyName" class="form-control form-control-lg rounded-3" />
                        <span asp-validation-for="CompanyName" class="text-danger text-sm"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="SupportEmail" class="form-label fw-semibold text-sm"></label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text rounded-start-3 bg-light border-end-0">
                                <i class="bi bi-envelope text-muted"></i>
                            </span>
                            <input asp-for="SupportEmail" class="form-control rounded-end-3 border-start-0" />
                        </div>
                    </div>

                    <!-- Inventory Logic Section -->
                    <div class="d-flex align-items-center mb-3 mt-5">
                        <i class="bi bi-box-seam-fill text-amber fs-5 me-2"></i>
                        <h5 class="fw-semibold mb-0">Inventory Logic</h5>
                    </div>
                    <hr class="mb-4 opacity-10" />

                    <div class="row g-3">
                        <div class="col-md-6 mb-3">
                            <label asp-for="LowStockThreshold" class="form-label fw-semibold text-sm"></label>
                            <div class="input-group input-group-lg">
                                <input asp-for="LowStockThreshold" class="form-control rounded-start-3" type="number" />
                                <span class="input-group-text rounded-end-3 bg-light">Units</span>
                            </div>
                            <small class="text-muted text-xs mt-1 d-block">
                                <i class="bi bi-info-circle me-1"></i>
                                Items below this number trigger alerts.
                            </small>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TaxRate" class="form-label fw-semibold text-sm"></label>
                            <div class="input-group input-group-lg">
                                <input asp-for="TaxRate" class="form-control rounded-start-3" type="number" step="0.01" />
                                <span class="input-group-text rounded-end-3 bg-light">%</span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4 opacity-10" />

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-moc-primary btn-lg py-3">
                            <i class="bi bi-check2-circle me-2"></i> Save Configuration
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-moc-outline py-2">
                            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
                        </a>
                    </div>
                </form>
            </div>

            <!-- Card Footer -->
            <div class="card-footer text-muted text-center text-sm py-3 bg-light bg-opacity-50"
                 style="border-radius: 0 0 0.875rem 0.875rem; border-top: 1px solid var(--moc-border);">
                <i class="bi bi-clock-history me-1"></i>
                Last Updated: @Model.LastUpdated.ToString("g")
            </div>
        </div>

    </div>
</div>