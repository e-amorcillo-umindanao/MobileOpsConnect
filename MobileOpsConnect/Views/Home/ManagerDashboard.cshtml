@{
    ViewData["Title"] = "Manager Overview";
}

<!-- ═══════════════════════════════════════════════ -->
<!-- HERO BANNER                                     -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-hero p-4 p-md-5 mb-4 text-white anim-fade-in">
    <div class="position-relative" style="z-index: 2;">
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                <i class="bi bi-circle-fill text-success me-1" style="font-size:0.4rem;vertical-align:middle;"></i>
                All Systems Operational
            </span>
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                <i class="bi bi-briefcase-fill me-1"></i> Department Manager &bull; Charlie
            </span>
        </div>
        <h1 class="display-5 fw-bold mb-2 letter-tight">Charlie's Dashboard</h1>
        <p class="lead mb-0 opacity-75">
            Approvals, Analytics &amp; Self-Service &mdash; MobileOps Connect ERP
        </p>
    </div>
    <!-- Decorative watermark -->
    <div class="position-absolute top-50 end-0 translate-middle-y d-none d-lg-block pe-none"
         style="z-index:1;opacity:0.05;font-size:15rem;line-height:1;margin-right:1.5rem;">
        <i class="bi bi-briefcase-fill"></i>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- DEPARTMENT METRICS  (Placeholders)              -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-section-header mt-2">
    <h5 class="fw-bold letter-tight">
        <i class="bi bi-bar-chart-line-fill text-indigo me-1"></i> Department Overview
    </h5>
    <hr />
</div>

<div class="row g-3 mb-4">
    <!-- Pending Approvals -->
    <div class="col-6 col-lg-3 anim-fade-in anim-delay-1">
        <div class="moc-metric p-3 p-md-4 h-100">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Pending</p>
                    <h3 class="fw-bold mb-1 letter-tight">5</h3>
                    <span class="badge bg-amber-50 text-amber text-xs fw-semibold">
                        <i class="bi bi-exclamation-circle-fill me-1"></i> Action
                    </span>
                </div>
                <div class="moc-icon-box bg-amber-50 rounded-3">
                    <i class="bi bi-hourglass-split text-amber fs-5"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Team Members -->
    <div class="col-6 col-lg-3 anim-fade-in anim-delay-2">
        <div class="moc-metric p-3 p-md-4 h-100">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Team</p>
                    <h3 class="fw-bold mb-1 letter-tight">24</h3>
                    <span class="badge bg-indigo-50 text-indigo text-xs fw-semibold">
                        <i class="bi bi-people-fill me-1"></i> Active
                    </span>
                </div>
                <div class="moc-icon-box bg-indigo-50 rounded-3">
                    <i class="bi bi-person-lines-fill text-indigo fs-5"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Leave Utilization -->
    <div class="col-6 col-lg-3 anim-fade-in anim-delay-3">
        <div class="moc-metric p-3 p-md-4 h-100">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <p class="text-muted text-uppercase text-xs fw-semibold mb-1">On Leave</p>
                    <h3 class="fw-bold mb-1 letter-tight">3</h3>
                    <div class="progress mt-1" style="height:4px;width:72px;">
                        <div class="progress-bar rounded-pill" role="progressbar"
                             style="width:12%;background:var(--moc-primary);"
                             aria-valuenow="12" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <span class="text-muted text-xs">of 24 staff</span>
                </div>
                <div class="moc-icon-box bg-cyan-50 rounded-3">
                    <i class="bi bi-calendar2-x text-cyan fs-5"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Department Performance -->
    <div class="col-6 col-lg-3 anim-fade-in anim-delay-4">
        <div class="moc-metric p-3 p-md-4 h-100">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Performance</p>
                    <h3 class="fw-bold mb-1 letter-tight">96.2<span class="fs-6 fw-semibold text-muted">%</span></h3>
                    <span class="badge bg-green-50 text-green text-xs fw-semibold">
                        <i class="bi bi-arrow-up-short"></i> 3.1%
                    </span>
                </div>
                <div class="moc-icon-box bg-green-50 rounded-3">
                    <i class="bi bi-graph-up-arrow text-green fs-5"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- PRIORITY ACTIONS — OPERATIONAL APPROVALS        -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-section-header mt-5">
    <h5 class="fw-bold letter-tight">
        <i class="bi bi-lightning-charge-fill text-amber me-1"></i> Operational Approvals
    </h5>
    <hr />
</div>

<div class="row g-3 mb-4">

    <!-- Pending Leave Applications — Priority Card -->
    <div class="col-md-6 anim-fade-in anim-delay-1">
        <div class="card moc-card border-0 shadow-sm h-100 position-relative overflow-hidden"
             style="border-left: 4px solid #f59e0b !important;">
            <div class="card-body p-4 d-flex flex-column">

                <!-- Priority Badge -->
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div class="d-flex align-items-center">
                        <div class="moc-icon-box-lg bg-amber-50 rounded-3 me-3">
                            <i class="bi bi-calendar-event-fill text-amber fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-0 letter-tight">Pending Leaves</h5>
                            <span class="text-muted text-sm">Employee Requests</span>
                        </div>
                    </div>
                    <span class="badge rounded-pill px-3 py-2 fw-semibold text-xs"
                          style="background:rgba(245,158,11,0.12); color:#d97706; border:1px solid rgba(245,158,11,0.2);">
                        <i class="bi bi-exclamation-circle-fill me-1"></i> Action Required
                    </span>
                </div>

                <p class="text-muted text-sm flex-grow-1">
                    Review and approve employee leave applications. Pending requests require your attention for timely processing.
                </p>

                <!-- Urgency Indicator -->
                <div class="d-flex align-items-center gap-2 mb-3 p-2 rounded-3" style="background:rgba(245,158,11,0.05);">
                    <div class="moc-icon-box bg-amber-50 rounded-3" style="width:36px;height:36px;min-width:36px;">
                        <i class="bi bi-clock-history text-amber"></i>
                    </div>
                    <div>
                        <p class="fw-semibold text-sm mb-0 letter-tight" style="color:#92400e;">5 requests awaiting review</p>
                        <span class="text-muted text-xs">Oldest pending: 2 days ago</span>
                    </div>
                </div>

                <a asp-controller="LeaveRequests" asp-action="Index" class="btn btn-moc-primary w-100">
                    <i class="bi bi-check2-square me-1"></i> Review Requests
                </a>
            </div>
        </div>
    </div>

    <!-- Purchase Orders — Priority Card -->
    <div class="col-md-6 anim-fade-in anim-delay-2">
        <div class="card moc-card border-0 shadow-sm h-100 position-relative overflow-hidden"
             style="border-left: 4px solid #6366f1 !important;">
            <div class="card-body p-4 d-flex flex-column">

                <!-- Priority Badge -->
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div class="d-flex align-items-center">
                        <div class="moc-icon-box-lg bg-indigo-50 rounded-3 me-3">
                            <i class="bi bi-truck text-indigo fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-0 letter-tight">Purchase Orders</h5>
                            <span class="text-muted text-sm">Restock Requests</span>
                        </div>
                    </div>
                    <span class="badge rounded-pill px-3 py-2 fw-semibold text-xs"
                          style="background:rgba(99,102,241,0.12); color:#4f46e5; border:1px solid rgba(99,102,241,0.2);">
                        <i class="bi bi-arrow-repeat me-1"></i> Pending Review
                    </span>
                </div>

                <p class="text-muted text-sm flex-grow-1">
                    Approve purchase orders submitted by warehouse staff for inventory restocking. Keep supply chains moving smoothly.
                </p>

                <!-- Urgency Indicator -->
                <div class="d-flex align-items-center gap-2 mb-3 p-2 rounded-3" style="background:rgba(99,102,241,0.04);">
                    <div class="moc-icon-box bg-indigo-50 rounded-3" style="width:36px;height:36px;min-width:36px;">
                        <i class="bi bi-inbox-fill text-indigo"></i>
                    </div>
                    <div>
                        <p class="fw-semibold text-sm mb-0 letter-tight" style="color:#312e81;">3 orders pending approval</p>
                        <span class="text-muted text-xs">Estimated value: ₱24,500.00</span>
                    </div>
                </div>

                <a asp-controller="Orders" asp-action="Index" class="btn btn-moc-primary w-100">
                    <i class="bi bi-clipboard-check me-1"></i> Approve Orders
                </a>
            </div>
        </div>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- REPORTS & ANALYTICS                             -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-section-header mt-5">
    <h5 class="fw-bold letter-tight">
        <i class="bi bi-graph-up text-purple me-1"></i> Reports &amp; Analytics
    </h5>
    <hr />
</div>

<div class="row g-3 mb-4">
    <!-- Analytics Dashboard -->
    <div class="col-md-6 anim-fade-in anim-delay-1">
        <div class="card moc-card border-0 shadow-sm h-100">
            <div class="card-body p-4 d-flex flex-column">
                <div class="d-flex align-items-center mb-3">
                    <div class="moc-icon-box-lg bg-purple-50 rounded-3 me-3">
                        <i class="bi bi-speedometer2 text-purple fs-4"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold mb-0 letter-tight">Analytics Dashboard</h5>
                        <span class="text-muted text-sm">Trends &amp; Metrics</span>
                    </div>
                </div>
                <p class="text-muted text-sm flex-grow-1">
                    Sales trends, leave utilization, and performance metrics in one comprehensive view.
                </p>

                <!-- Placeholder Mini Chart Area -->
                <div class="rounded-3 p-3 mb-3 d-flex align-items-end justify-content-between gap-1"
                     style="background: rgba(168,85,247,0.04); height: 72px;">
                    <div class="rounded-1" style="width:12%;height:35%;background:rgba(168,85,247,0.18);"></div>
                    <div class="rounded-1" style="width:12%;height:55%;background:rgba(168,85,247,0.25);"></div>
                    <div class="rounded-1" style="width:12%;height:40%;background:rgba(168,85,247,0.18);"></div>
                    <div class="rounded-1" style="width:12%;height:70%;background:rgba(168,85,247,0.30);"></div>
                    <div class="rounded-1" style="width:12%;height:60%;background:rgba(168,85,247,0.25);"></div>
                    <div class="rounded-1" style="width:12%;height:85%;background:rgba(168,85,247,0.40);"></div>
                    <div class="rounded-1" style="width:12%;height:75%;background:var(--moc-primary);"></div>
                </div>

                <a asp-controller="Home" asp-action="Analytics" class="btn btn-moc-outline w-100">
                    <i class="bi bi-arrow-right-circle me-1"></i> Open Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Inventory Reports -->
    <div class="col-md-6 anim-fade-in anim-delay-2">
        <div class="card moc-card border-0 shadow-sm h-100">
            <div class="card-body p-4 d-flex flex-column">
                <div class="d-flex align-items-center mb-3">
                    <div class="moc-icon-box-lg bg-cyan-50 rounded-3 me-3">
                        <i class="bi bi-box-seam-fill text-cyan fs-4"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold mb-0 letter-tight">Inventory Reports</h5>
                        <span class="text-muted text-sm">Stock &amp; Valuation</span>
                    </div>
                </div>
                <p class="text-muted text-sm flex-grow-1">
                    Detailed breakdown of stock levels, product categories, and overall inventory valuation.
                </p>

                <!-- Placeholder Stats Preview -->
                <div class="row g-2 mb-3">
                    <div class="col-4">
                        <div class="rounded-3 p-2 text-center" style="background:rgba(6,182,212,0.05);">
                            <p class="fw-bold mb-0 text-sm letter-tight">142</p>
                            <span class="text-muted text-xs">Products</span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="rounded-3 p-2 text-center" style="background:rgba(239,68,68,0.05);">
                            <p class="fw-bold mb-0 text-sm letter-tight text-red">8</p>
                            <span class="text-muted text-xs">Low Stock</span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="rounded-3 p-2 text-center" style="background:rgba(34,197,94,0.05);">
                            <p class="fw-bold mb-0 text-sm letter-tight text-green">97%</p>
                            <span class="text-muted text-xs">In Stock</span>
                        </div>
                    </div>
                </div>

                <a asp-controller="Products" asp-action="Index" class="btn btn-moc-outline w-100">
                    <i class="bi bi-arrow-right-circle me-1"></i> View Inventory Report
                </a>
            </div>
        </div>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- SELF-SERVICE                                     -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-section-header mt-5">
    <h5 class="fw-bold letter-tight">
        <i class="bi bi-person-gear text-green me-1"></i> My Self-Service
    </h5>
    <hr />
</div>

<div class="row g-3 mb-4">
    <!-- File My Leave -->
    <div class="col-md-4 anim-fade-in anim-delay-1">
        <div class="card moc-card border-0 shadow-sm h-100">
            <div class="card-body p-4 d-flex flex-column text-center">
                <div class="mx-auto mb-3">
                    <div class="moc-icon-box-lg bg-green-50 rounded-3">
                        <i class="bi bi-calendar-plus-fill text-green fs-4"></i>
                    </div>
                </div>
                <h6 class="fw-bold mb-1 letter-tight">File My Leave</h6>
                <p class="text-muted text-xs flex-grow-1 mb-3">
                    Submit a new leave application for approval
                </p>
                <a asp-controller="LeaveRequests" asp-action="Create" class="btn btn-moc-primary w-100">
                    <i class="bi bi-plus-circle me-1"></i> File Leave
                </a>
            </div>
        </div>
    </div>

    <!-- View My Payslip -->
    <div class="col-md-4 anim-fade-in anim-delay-2">
        <div class="card moc-card border-0 shadow-sm h-100">
            <div class="card-body p-4 d-flex flex-column text-center">
                <div class="mx-auto mb-3">
                    <div class="moc-icon-box-lg bg-cyan-50 rounded-3">
                        <i class="bi bi-file-earmark-text-fill text-cyan fs-4"></i>
                    </div>
                </div>
                <h6 class="fw-bold mb-1 letter-tight">View My Payslip</h6>
                <p class="text-muted text-xs flex-grow-1 mb-3">
                    Access your latest payslip and compensation details
                </p>
                <a asp-controller="Payroll" asp-action="MyPayslip" class="btn btn-moc-outline w-100">
                    <i class="bi bi-file-earmark-text me-1"></i> View Payslip
                </a>
            </div>
        </div>
    </div>

    <!-- Change Password / Profile -->
    <div class="col-md-4 anim-fade-in anim-delay-3">
        <div class="card moc-card border-0 shadow-sm h-100">
            <div class="card-body p-4 d-flex flex-column text-center">
                <div class="mx-auto mb-3">
                    <div class="moc-icon-box-lg bg-purple-50 rounded-3">
                        <i class="bi bi-shield-lock-fill text-purple fs-4"></i>
                    </div>
                </div>
                <h6 class="fw-bold mb-1 letter-tight">Account Security</h6>
                <p class="text-muted text-xs flex-grow-1 mb-3">
                    Update your password and manage profile settings
                </p>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-moc-outline w-100">
                    <i class="bi bi-gear me-1"></i> Manage Profile
                </a>
            </div>
        </div>
    </div>
</div>