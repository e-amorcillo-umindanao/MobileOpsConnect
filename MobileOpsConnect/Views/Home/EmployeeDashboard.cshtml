@{
    ViewData["Title"] = "Staff Portal";
    bool isWarehouse = User.IsInRole("WarehouseStaff");
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome, @User.Identity?.Name</h1>
    <p class="lead">
        @if (isWarehouse)
        {
            <span>Warehouse Operations Portal</span>
        }
        else
        {
            <span>Employee Self-Service</span>
        }
    </p>
</div>

<div class="row mt-4">
    @* WAREHOUSE BUTTONS (Only for Delta) *@
    @if (isWarehouse)
    {
        <div class="col-md-6 mb-3">
            <a asp-controller="Warehouse" asp-action="Index" class="btn btn-primary btn-lg w-100">
                🏭 Stock In / Stock Out
            </a>
        </div>
        <div class="col-md-6 mb-3">
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary btn-lg w-100">
                📦 Search Inventory List
            </a>
        </div>
        <div class="col-md-6 mb-3">
            <a asp-controller="Products" asp-action="Create" class="btn btn-dark btn-lg w-100">
                ➕ Register New Item
            </a>
        </div>
        <div class="col-md-6 mb-3">
            <a asp-controller="Warehouse" asp-action="LowStock" class="btn btn-danger btn-lg w-100">
                ⚠️ View Low Stock Alerts
            </a>
        </div>
    }

    @* HR BUTTONS (Visible to Everyone) *@
    <div class="col-md-6 mb-3">
        <a asp-controller="LeaveRequests" asp-action="Create" class="btn btn-success btn-lg w-100">
            📅 File Leave Request
        </a>
    </div>

    <div class="col-md-6 mb-3">
        <a asp-controller="LeaveRequests" asp-action="Index" class="btn btn-warning btn-lg w-100 text-dark">
            📂 My Leave History
        </a>
    </div>

    <div class="col-md-12 mb-3">
        <a asp-controller="Payroll" asp-action="MyPayslip" class="btn btn-info btn-lg w-100 text-white">
            📄 View Payslip
        </a>
    </div>
</div>