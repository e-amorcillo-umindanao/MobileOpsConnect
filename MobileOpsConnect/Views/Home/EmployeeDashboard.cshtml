@{
    ViewData["Title"] = "Staff Portal";
    // Check EXACTLY if the user is Warehouse Staff
    bool isWarehouse = User.IsInRole("WarehouseStaff");
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome, @User.Identity?.Name</h1>
    <p class="lead">
        @if (isWarehouse)
        {
            <span>Warehouse Operations Portal</span>
        }
        else
        {
            <span>Employee Self-Service</span>
        }
    </p>
</div>

<div class="row">
    @if (isWarehouse)
    {
        <div class="col-md-6">
            <div class="card border-info mb-3">
                <div class="card-header bg-info text-white">Warehouse Tasks</div>
                <div class="card-body">
                    <h2 class="card-title">0</h2>
                    <p class="card-text">Pending shipments for today.</p>
                </div>
            </div>
        </div>
    }

    <div class="col-md-6">
        <div class="card border-secondary mb-3">
            <div class="card-header bg-secondary text-white">Leave Credits</div>
            <div class="card-body">
                <h2 class="card-title">15 Days</h2>
                <p class="card-text">Remaining annual leave.</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    @* WAREHOUSE BUTTONS *@
    @if (isWarehouse)
    {
        <div class="col-md-6 mb-3">
            <button class="btn btn-primary btn-lg w-100" onclick="alert('Scanner Camera Opening...')">
                📷 Scan Barcode
            </button>
        </div>
        <div class="col-md-6 mb-3">
            <a href="/Products" class="btn btn-outline-primary btn-lg w-100">
                📦 Search Inventory
            </a>
        </div>
    }

    @* HR BUTTONS (Visible to Everyone) *@

    <div class="col-md-6 mb-3">
        <a asp-controller="LeaveRequests" asp-action="Create" class="btn btn-success btn-lg w-100">
            📅 File Leave Request
        </a>
    </div>

    <div class="col-md-6 mb-3">
        <a asp-controller="LeaveRequests" asp-action="Index" class="btn btn-warning btn-lg w-100 text-dark">
            📂 My Leave History
        </a>
    </div>

    <div class="col-md-12 mb-3">
        <button class="btn btn-info btn-lg w-100 text-white">
            📄 View Payslip
        </button>
    </div>
</div>