@{
    ViewData["Title"] = "Staff Portal";
}

<div class="text-center mb-5">
    <h1 class="display-4">Welcome, Staff</h1>
    <p class="lead">Warehouse Operations Portal</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card border-info mb-3">
            <div class="card-header bg-info text-white">My Tasks</div>
            <div class="card-body">
                <h2 class="card-title">0</h2>
                <p class="card-text">Pending assignments for today.</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card border-secondary mb-3">
            <div class="card-header bg-secondary text-white">Leave Credits</div>
            <div class="card-body">
                <h2 class="card-title">15 Days</h2>
                <p class="card-text">Remaining annual leave.</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6 mb-3">
        <button class="btn btn-primary btn-lg w-100" onclick="alert('Scanner Camera Opening...')">
            📷 Scan Barcode
        </button>
    </div>
    <div class="col-md-6 mb-3">
        <a href="/Products" class="btn btn-outline-primary btn-lg w-100">
            📦 Search Inventory
        </a>
    </div>
</div>