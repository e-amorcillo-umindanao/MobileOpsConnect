@{
    ViewData["Title"] = "Command Center";
    bool isSuperAdmin = User.IsInRole("SuperAdmin");
    bool isSystemAdmin = User.IsInRole("SystemAdmin");
}

<!-- ═══════════════════════════════════════════════ -->
<!-- HERO BANNER                                     -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-hero p-4 p-md-5 mb-4 text-white anim-fade-in">
    <div class="position-relative" style="z-index: 2;">
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                <i class="bi bi-circle-fill text-success me-1" style="font-size:0.4rem;vertical-align:middle;"></i>
                All Systems Operational
            </span>
            @if (isSuperAdmin)
            {
                <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                    <i class="bi bi-shield-lock-fill me-1"></i> Super Admin &bull; Alpha
                </span>
            }
            else if (isSystemAdmin)
            {
                <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                    <i class="bi bi-gear-fill me-1"></i> System Admin &bull; Beta
                </span>
            }
        </div>
        <h1 class="display-5 fw-bold mb-2 letter-tight">Alpha's Command Center</h1>
        <p class="lead mb-0 opacity-75">System Overview &amp; Control Panel &mdash; MobileOps Connect ERP</p>
    </div>
    <!-- Decorative watermark -->
    <div class="position-absolute top-50 end-0 translate-middle-y d-none d-lg-block pe-none"
         style="z-index:1;opacity:0.05;font-size:15rem;line-height:1;margin-right:1.5rem;">
        <i class="bi bi-shield-lock-fill"></i>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- SYSTEM HEALTH METRICS  (Placeholders)           -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-section-header mt-2">
    <h5 class="fw-bold letter-tight">
        <i class="bi bi-heart-pulse-fill text-red me-1"></i> System Health
    </h5>
    <hr />
</div>

<div class="row g-3 mb-4">
    <!-- Active Users -->
    <div class="col-6 col-lg-3 anim-fade-in anim-delay-1">
        <div class="moc-metric p-3 p-md-4 h-100">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <p class="text-muted text-uppercase text-xs fw-semibold mb-1 d-flex align-items-center gap-1">
                        Active Users
                    </p>
                    <h3 class="fw-bold mb-1 letter-tight">128</h3>
                    <span class="badge bg-green-50 text-green text-xs fw-semibold">
                        <i class="bi bi-arrow-up-short"></i> 12.5%
                    </span>
                </div>
                <div class="moc-icon-box bg-indigo-50 rounded-3">
                    <i class="bi bi-people-fill text-indigo fs-5"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Total Errors (24h) -->
    <div class="col-6 col-lg-3 anim-fade-in anim-delay-2">
        <div class="moc-metric p-3 p-md-4 h-100">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Errors <span class="d-none d-md-inline">(24h)</span></p>
                    <h3 class="fw-bold mb-1 letter-tight">3</h3>
                    <span class="badge bg-green-50 text-green text-xs fw-semibold">
                        <i class="bi bi-arrow-down-short"></i> 58%
                    </span>
                </div>
                <div class="moc-icon-box bg-red-50 rounded-3">
                    <i class="bi bi-exclamation-triangle-fill text-red fs-5"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Database Size -->
    <div class="col-6 col-lg-3 anim-fade-in anim-delay-3">
        <div class="moc-metric p-3 p-md-4 h-100">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <p class="text-muted text-uppercase text-xs fw-semibold mb-1">DB Size</p>
                    <h3 class="fw-bold mb-1 letter-tight">2.4 <span class="fs-6 fw-semibold text-muted">GB</span></h3>
                    <div class="progress mt-1" style="height:4px;width:72px;">
                        <div class="progress-bar rounded-pill" role="progressbar"
                             style="width:48%;background:var(--moc-primary);"
                             aria-valuenow="48" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <span class="text-muted text-xs">of 5 GB</span>
                </div>
                <div class="moc-icon-box bg-purple-50 rounded-3">
                    <i class="bi bi-database-fill text-purple fs-5"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- System Uptime -->
    <div class="col-6 col-lg-3 anim-fade-in anim-delay-4">
        <div class="moc-metric p-3 p-md-4 h-100">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Uptime</p>
                    <h3 class="fw-bold mb-1 letter-tight">99.97<span class="fs-6 fw-semibold text-muted">%</span></h3>
                    <span class="badge bg-green-50 text-green text-xs fw-semibold">
                        <i class="bi bi-check-circle-fill me-1"></i> Healthy
                    </span>
                </div>
                <div class="moc-icon-box bg-green-50 rounded-3">
                    <i class="bi bi-activity text-green fs-5"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- BUSINESS METRICS  (from backend ViewBag)        -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-section-header mt-5">
    <h5 class="fw-bold letter-tight">
        <i class="bi bi-bar-chart-line-fill text-indigo me-1"></i> Business Overview
    </h5>
    <hr />
</div>

<div class="row g-3 mb-4">
    <!-- Total Products -->
    <div class="col-md-4 anim-fade-in anim-delay-1">
        <div class="card moc-card border-0 shadow-sm h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div class="moc-icon-box bg-indigo-50 rounded-3">
                        <i class="bi bi-box-seam-fill text-indigo fs-5"></i>
                    </div>
                    <span class="badge rounded-pill bg-indigo-50 text-indigo px-3 py-2 fw-semibold text-xs">Products</span>
                </div>
                <h2 class="fw-bold mb-1 letter-tight">@ViewBag.TotalProducts</h2>
                <p class="text-muted text-sm mb-0">Total items in inventory</p>
            </div>
        </div>
    </div>

    <!-- Low Stock Alerts -->
    <div class="col-md-4 anim-fade-in anim-delay-2">
        <div class="card moc-card border-0 shadow-sm h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div class="moc-icon-box bg-red-50 rounded-3">
                        <i class="bi bi-exclamation-octagon-fill text-red fs-5"></i>
                    </div>
                    <span class="badge rounded-pill bg-red-50 text-red px-3 py-2 fw-semibold text-xs">Alerts</span>
                </div>
                <h2 class="fw-bold mb-1 letter-tight">@ViewBag.LowStockCount</h2>
                <p class="text-muted text-sm mb-0">Low stock — reorder needed</p>
            </div>
        </div>
    </div>

    <!-- Inventory Value -->
    <div class="col-md-4 anim-fade-in anim-delay-3">
        <div class="card moc-card border-0 shadow-sm h-100">
            <div class="card-body p-4">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <div class="moc-icon-box bg-green-50 rounded-3">
                        <i class="bi bi-currency-exchange text-green fs-5"></i>
                    </div>
                    <span class="badge rounded-pill bg-green-50 text-green px-3 py-2 fw-semibold text-xs">Value</span>
                </div>
                <h2 class="fw-bold mb-1 letter-tight">₱@Convert.ToDecimal(ViewBag.TotalValue).ToString("N2")</h2>
                <p class="text-muted text-sm mb-0">Total inventory asset value</p>
            </div>
        </div>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- QUICK ACCESS — CORE OPERATIONS                  -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-section-header mt-5">
    <h5 class="fw-bold letter-tight">
        <i class="bi bi-lightning-charge-fill text-amber me-1"></i> Quick Access
    </h5>
    <hr />
</div>

<div class="row g-3 mb-4">
    <!-- Inventory Management -->
    <div class="col-md-6 anim-fade-in anim-delay-1">
        <div class="card moc-card border-0 shadow-sm h-100">
            <div class="card-body p-4 d-flex flex-column">
                <div class="d-flex align-items-center mb-3">
                    <div class="moc-icon-box-lg bg-indigo-50 rounded-3 me-3">
                        <i class="bi bi-box-seam-fill text-indigo fs-4"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold mb-0 letter-tight">Inventory Management</h5>
                        <span class="text-muted text-sm">Products &amp; Stock Control</span>
                    </div>
                </div>
                <p class="text-muted text-sm flex-grow-1">
                    View stock levels, adjust prices, and manage product details across all warehouses.
                </p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-moc-primary w-100">
                    <i class="bi bi-arrow-right-circle me-1"></i> Go to Inventory
                </a>
            </div>
        </div>
    </div>

    <!-- User / Admin Management (conditional) -->
    <div class="col-md-6 anim-fade-in anim-delay-2">
        <div class="card moc-card border-0 shadow-sm h-100">
            <div class="card-body p-4 d-flex flex-column">
                <div class="d-flex align-items-center mb-3">
                    @if (isSuperAdmin)
                    {
                        <div class="moc-icon-box-lg bg-red-50 rounded-3 me-3">
                            <i class="bi bi-shield-lock-fill text-red fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-0 letter-tight text-danger">Manage System Admins</h5>
                            <span class="text-muted text-sm">Beta-Level Accounts</span>
                        </div>
                    }
                    else
                    {
                        <div class="moc-icon-box-lg bg-cyan-50 rounded-3 me-3">
                            <i class="bi bi-people-fill text-cyan fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-0 letter-tight">Manage User Accounts</h5>
                            <span class="text-muted text-sm">Staff &amp; Employees</span>
                        </div>
                    }
                </div>
                @if (isSuperAdmin)
                {
                    <p class="text-muted text-sm flex-grow-1">
                        Create and manage System Administrator accounts (Beta) with elevated privileges.
                    </p>
                }
                else
                {
                    <p class="text-muted text-sm flex-grow-1">
                        Manage Managers, Warehouse Staff, and Employee accounts and their permissions.
                    </p>
                }
                <a asp-controller="Users" asp-action="Index" class="btn btn-moc-outline w-100">
                    <i class="bi bi-arrow-right-circle me-1"></i> Manage Users
                </a>
            </div>
        </div>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- ADMIN TOOLS  (SuperAdmin OR SystemAdmin)        -->
<!-- ═══════════════════════════════════════════════ -->
@if (isSuperAdmin || isSystemAdmin)
{
    <div class="row g-3 mb-4">
        <!-- System Configuration -->
        <div class="col-md-6 anim-fade-in anim-delay-1">
            <div class="card moc-card border-0 shadow-sm h-100">
                <div class="card-body p-4 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="moc-icon-box-lg bg-amber-50 rounded-3 me-3">
                            <i class="bi bi-gear-wide-connected text-amber fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-0 letter-tight">System Configuration</h5>
                            <span class="text-muted text-sm">Settings &amp; Thresholds</span>
                        </div>
                    </div>
                    <p class="text-muted text-sm flex-grow-1">
                        Manage global settings, tax rates, low stock thresholds, and company information.
                    </p>
                    <a asp-controller="Settings" asp-action="Index" class="btn btn-moc-outline w-100">
                        <i class="bi bi-sliders me-1"></i> Open Settings
                    </a>
                </div>
            </div>
        </div>

        <!-- HR & Self Service -->
        <div class="col-md-6 anim-fade-in anim-delay-2">
            <div class="card moc-card border-0 shadow-sm h-100">
                <div class="card-body p-4 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="moc-icon-box-lg bg-cyan-50 rounded-3 me-3">
                            <i class="bi bi-calendar2-week-fill text-cyan fs-4"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold mb-0 letter-tight">HR &amp; Self Service</h5>
                            <span class="text-muted text-sm">Leave &amp; Payroll</span>
                        </div>
                    </div>
                    <p class="text-muted text-sm flex-grow-1">
                        Manage staff leaves, file your own leave requests, and view payroll information.
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-controller="LeaveRequests" asp-action="Index" class="btn btn-moc-outline w-100">
                            <i class="bi bi-calendar-check me-1"></i> Manage Staff Leaves
                        </a>
                        <div class="row g-2">
                            <div class="col-6">
                                <a asp-controller="LeaveRequests" asp-action="Create" class="btn btn-moc-outline w-100 text-sm px-2">
                                    <i class="bi bi-plus-circle me-1"></i> File Leave
                                </a>
                            </div>
                            <div class="col-6">
                                <a asp-controller="Payroll" asp-action="MyPayslip" class="btn btn-moc-outline w-100 text-sm px-2">
                                    <i class="bi bi-file-earmark-text me-1"></i> Payslip
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- ═══════════════════════════════════════════════ -->
<!-- SUPER ADMIN ZONE  (SuperAdmin only)             -->
<!-- ═══════════════════════════════════════════════ -->
@if (isSuperAdmin)
{
    <div class="moc-section-header mt-5">
        <h5 class="fw-bold letter-tight">
            <i class="bi bi-shield-exclamation text-danger me-1"></i> Super Admin Zone
        </h5>
        <hr />
    </div>

    <div class="moc-superadmin-zone p-4 mb-4 anim-fade-in">

        <!-- Zone Header -->
        <div class="d-flex flex-wrap align-items-center gap-2 mb-4">
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(239,68,68,0.14);color:#fca5a5;">
                <i class="bi bi-lock-fill me-1"></i> Elevated Privileges
            </span>
            <span class="text-white-50 text-sm d-none d-md-inline">
                Developer-level controls for system operations
            </span>
        </div>

        <div class="row g-3">

            <!-- Global Audit Logs -->
            <div class="col-md-6 col-lg-3">
                <div class="moc-sa-card p-3 h-100 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="moc-icon-box rounded-3 me-3" style="background:rgba(251,191,36,0.14);">
                            <i class="bi bi-journal-text fs-4" style="color:#fbbf24;"></i>
                        </div>
                        <div>
                            <h6 class="fw-semibold text-white mb-0">Audit Logs</h6>
                            <span class="text-white-50 text-xs">Global Activity</span>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <a asp-controller="Settings" asp-action="AuditLogs"
                           class="btn btn-sm w-100 fw-semibold"
                           style="background:rgba(251,191,36,0.12);color:#fbbf24;border:1px solid rgba(251,191,36,0.22);">
                            <i class="bi bi-arrow-right-circle me-1"></i> View Logs
                        </a>
                    </div>
                </div>
            </div>

            <!-- Manage System Admins -->
            <div class="col-md-6 col-lg-3">
                <div class="moc-sa-card p-3 h-100 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="moc-icon-box rounded-3 me-3" style="background:rgba(99,102,241,0.14);">
                            <i class="bi bi-people-fill fs-4" style="color:#818cf8;"></i>
                        </div>
                        <div>
                            <h6 class="fw-semibold text-white mb-0">Sys Admins</h6>
                            <span class="text-white-50 text-xs">Beta Accounts</span>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <a asp-controller="Users" asp-action="Index"
                           class="btn btn-sm w-100 fw-semibold"
                           style="background:rgba(99,102,241,0.12);color:#818cf8;border:1px solid rgba(99,102,241,0.22);">
                            <i class="bi bi-arrow-right-circle me-1"></i> Manage
                        </a>
                    </div>
                </div>
            </div>

            <!-- System Maintenance (placeholder) -->
            <div class="col-md-6 col-lg-3">
                <div class="moc-sa-card p-3 h-100 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="moc-icon-box rounded-3 me-3" style="background:rgba(34,197,94,0.14);">
                            <i class="bi bi-wrench-adjustable-circle-fill fs-4" style="color:#4ade80;"></i>
                        </div>
                        <div>
                            <h6 class="fw-semibold text-white mb-0">Maintenance</h6>
                            <span class="text-white-50 text-xs">System Health</span>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <button class="btn btn-sm w-100 fw-semibold" disabled
                                style="background:rgba(34,197,94,0.12);color:#4ade80;border:1px solid rgba(34,197,94,0.22);opacity:.55;">
                            <i class="bi bi-clock me-1"></i> Coming Soon
                        </button>
                    </div>
                </div>
            </div>

            <!-- Database Backups (placeholder) -->
            <div class="col-md-6 col-lg-3">
                <div class="moc-sa-card p-3 h-100 d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <div class="moc-icon-box rounded-3 me-3" style="background:rgba(6,182,212,0.14);">
                            <i class="bi bi-database-fill-down fs-4" style="color:#22d3ee;"></i>
                        </div>
                        <div>
                            <h6 class="fw-semibold text-white mb-0">DB Backups</h6>
                            <span class="text-white-50 text-xs">Data Safety</span>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <button class="btn btn-sm w-100 fw-semibold" disabled
                                style="background:rgba(6,182,212,0.12);color:#22d3ee;border:1px solid rgba(6,182,212,0.22);opacity:.55;">
                            <i class="bi bi-clock me-1"></i> Coming Soon
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
}