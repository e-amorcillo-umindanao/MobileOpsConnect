                    <i class="bi bi-calendar-event text-amber fs-5"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Database Size -->
    <div class="col-6 col-lg-3 anim-fade-in anim-delay-3">
        <div class="moc-metric p-3 p-md-4 h-100">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <p class="text-muted text-uppercase text-xs fw-semibold mb-1">DB Size</p>
                    @if (ViewBag.DbSizeMB != null)
                    {
                        var dbMb = (decimal)ViewBag.DbSizeMB;
                        if (dbMb >= 1024)
                        {
                            <h3 class="fw-bold mb-1 letter-tight">@((dbMb / 1024).ToString("F1")) <span class="fs-6 fw-semibold text-muted">GB</span></h3>
                        }
                        else
                        {
                            <h3 class="fw-bold mb-1 letter-tight">@dbMb.ToString("F0") <span class="fs-6 fw-semibold text-muted">MB</span></h3>
                        }
                    }
