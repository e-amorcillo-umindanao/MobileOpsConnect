@{
    ViewData["Title"] = "Command Center";
    bool isSuperAdmin = User.IsInRole("SuperAdmin");
    bool isSystemAdmin = User.IsInRole("SystemAdmin");
}

<div class="text-center mb-5">
    <h1 class="display-4">Admin Command Center</h1>
    <p class="lead">System Overview & Control Panel</p>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Total Products</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.TotalProducts</h5>
                <p class="card-text">Items in inventory.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-danger mb-3">
            <div class="card-header">Low Stock Alerts</div>
            <div class="card-body">
                <h5 class="card-title">@ViewBag.LowStockCount</h5>
                <p class="card-text">Items needing reorder.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Inventory Value</div>
            <div class="card-body">
                <h5 class="card-title">₱@Convert.ToDecimal(ViewBag.TotalValue).ToString("N2")</h5>
                <p class="card-text">Total asset value.</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">📦 Inventory Management</h5>
                <p class="card-text">View stock levels, adjust prices, and manage product details.</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Go to Inventory</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100 border-info">
            <div class="card-body">
                @if (isSuperAdmin)
                {
                    <h5 class="card-title text-danger">🛡️ Manage System Admins</h5>
                    <p class="card-text">Create and manage System Administrator accounts (Beta).</p>
                }
                else
                {
                    <h5 class="card-title text-info">👥 Manage User Accounts</h5>
                    <p class="card-text">Manage Managers, Warehouse Staff, and Employee accounts.</p>
                }
                <a asp-controller="Users" asp-action="Index" class="btn btn-info text-white">Manage Users</a>
            </div>
        </div>
    </div>
</div>

@if (isSuperAdmin || isSystemAdmin)
{
    <div class="row mb-4">
        <div class="col-md-6 mb-4">
            <div class="card border-secondary h-100">
                <div class="card-body">
                    <h5 class="card-title">⚙️ System Configuration</h5>
                    <p class="card-text">Manage global settings, tax rates, and low stock thresholds.</p>
                    <a asp-controller="Settings" asp-action="Index" class="btn btn-secondary w-100 mb-2">Open Settings</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card border-warning h-100">
                <div class="card-body">
                    <h5 class="card-title">⚠️ HR & Self Service</h5>
                    <p class="card-text">Manage staff leaves, file your own leave, and view payroll.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="LeaveRequests" asp-action="Index" class="btn btn-warning text-dark">Manage Staff Leaves</a>
                        <div class="row gx-2">
                            <div class="col-6">
                                <a asp-controller="LeaveRequests" asp-action="Create" class="btn btn-outline-warning text-dark w-100">File Leave</a>
                            </div>
                            <div class="col-6">
                                <a asp-controller="Payroll" asp-action="MyPayslip" class="btn btn-info text-white w-100">📄 Payslip</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (isSuperAdmin)
{
    <div class="card border-danger mb-4">
        <div class="card-header bg-danger text-white">
            🚨 Super Admin Zone (Developer Controls)
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <a asp-controller="Settings" asp-action="AuditLogs" class="btn btn-outline-warning text-dark w-100">📜 Global Audit Logs</a>
                </div>
            </div>
        </div>
    </div>
}