@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center mb-5">
    <h1 class="display-4">MobileOps Dashboard</h1>
    <p class="lead">Real-time Overview</p>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-header">Total Products</div>
            <div class="card-body">
                <h2 class="card-title">@ViewBag.TotalProducts</h2>
                <p class="card-text">Items currently in the warehouse.</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-danger mb-3">
            <div class="card-header">Low Stock Alerts</div>
            <div class="card-body">
                <h2 class="card-title">@ViewBag.LowStock</h2>
                <p class="card-text">Items below reorder point.</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-header">Total Value</div>
            <div class="card-body">
                <h2 class="card-title">₱@ViewBag.TotalValue.ToString("N2")</h2>
                <p class="card-text">Total asset value.</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <a href="/Products" class="btn btn-outline-dark btn-lg w-100">
            Manage Inventory &rarr;
        </a>
    </div>
</div>