        <div class="moc-metric p-3 p-md-4 h-100">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <p class="text-muted text-uppercase text-xs fw-semibold mb-1 d-flex align-items-center gap-1">
                        Registered Users
                    </p>
                    <h3 class="fw-bold mb-1 letter-tight">@ViewBag.ActiveUsers</h3>
                    <span class="badge bg-green-50 text-green text-xs fw-semibold">
                        <i class="bi bi-check-circle-fill me-1"></i> Total
                    </span>
                </div>
                <div class="moc-icon-box bg-indigo-50 rounded-3">
                    <i class="bi bi-people-fill text-indigo fs-5"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Leaves -->
    <div class="col-6 col-lg-3 anim-fade-in anim-delay-2">
        <div class="moc-metric p-3 p-md-4 h-100">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <p class="text-muted text-uppercase text-xs fw-semibold mb-1">Pending <span class="d-none d-md-inline">Leaves</span></p>
                    <h3 class="fw-bold mb-1 letter-tight">@ViewBag.PendingLeaves</h3>
                    <span class="badge @(ViewBag.PendingLeaves > 0 ? "bg-amber-50 text-amber" : "bg-green-50 text-green") text-xs fw-semibold">
                        <i class="bi @(ViewBag.PendingLeaves > 0 ? "bi-hourglass-split" : "bi-check-circle-fill") me-1"></i>
                        @(ViewBag.PendingLeaves > 0 ? "Needs Review" : "All Clear")
                    </span>
