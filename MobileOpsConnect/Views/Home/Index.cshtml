<!-- ═══════════════════════════════════════════════ -->
<!-- HERO BANNER                                     -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-hero p-4 p-md-5 mb-4 text-white anim-fade-in">
    <div class="position-relative" style="z-index: 2;">
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                <i class="bi bi-circle-fill text-success me-1" style="font-size:0.4rem;vertical-align:middle;"></i>
                All Systems Operational
            </span>
            @if (isSuperAdmin)
            {
                <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                    <i class="bi bi-shield-lock-fill me-1"></i> Super Admin &bull; Alpha
                </span>
            }
            else if (isSystemAdmin)
            {
                <span class="badge rounded-pill px-3 py-2 text-sm" style="background:rgba(255,255,255,0.14);">
                    <i class="bi bi-gear-fill me-1"></i> System Admin &bull; Beta
                </span>
            }
        </div>
        @if (isSuperAdmin)
        {
            <h1 class="display-5 fw-bold mb-2 letter-tight">Alpha's Command Center</h1>
            <p class="lead mb-0 opacity-75">Super Admin Overview &amp; Control Panel &mdash; MobileOps Connect ERP</p>
        }
        else if (isSystemAdmin)
        {
            <h1 class="display-5 fw-bold mb-2 letter-tight">Beta's Dashboard</h1>
            <p class="lead mb-0 opacity-75">System Admin Overview &amp; Control Panel &mdash; MobileOps Connect ERP</p>
        }
    </div>
    <!-- Decorative watermark -->
    <div class="position-absolute top-50 end-0 translate-middle-y d-none d-lg-block pe-none"
         style="z-index:1;opacity:0.05;font-size:15rem;line-height:1;margin-right:1.5rem;">
        <i class="bi bi-shield-lock-fill"></i>
    </div>
</div>

<!-- ═══════════════════════════════════════════════ -->
<!-- SYSTEM HEALTH METRICS  (Placeholders)           -->
<!-- ═══════════════════════════════════════════════ -->
<div class="moc-section-header mt-2">
    <h5 class="fw-bold letter-tight">
        <i class="bi bi-heart-pulse-fill text-red me-1"></i> System Health
