@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="moc-section-header">
    <h5 class="fw-bold letter-tight">
        <i class="bi bi-key-fill text-amber me-1"></i> Change Password
    </h5>
    <hr />
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="card moc-card border-0 shadow-sm">
    <div class="card-body p-4 p-md-5">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <!-- Current Password -->
            <div class="d-flex align-items-center mb-3">
                <div class="moc-icon-box bg-red-50 rounded-3 me-3" style="width:40px;height:40px;min-width:40px;">
                    <i class="bi bi-lock-fill text-red"></i>
                </div>
                <div>
                    <h6 class="fw-bold mb-0 letter-tight">Current Password</h6>
                    <span class="text-muted text-xs">Verify your identity</span>
                </div>
            </div>
            <div class="mb-4">
                <div class="input-group input-group-lg">
                    <span class="input-group-text rounded-start-3 border-end-0" style="background:rgba(239,68,68,0.06);">
                        <i class="bi bi-shield-lock text-red"></i>
                    </span>
                    <input asp-for="Input.OldPassword" class="form-control rounded-end-3 border-start-0"
                           autocomplete="current-password" placeholder="Enter current password"
                           style="padding:0.875rem 1rem;font-size:1rem;" />
                </div>
                <span asp-validation-for="Input.OldPassword" class="text-danger text-xs"></span>
            </div>

            <hr class="my-4 opacity-10" />

            <!-- New Password -->
            <div class="d-flex align-items-center mb-3">
                <div class="moc-icon-box bg-green-50 rounded-3 me-3" style="width:40px;height:40px;min-width:40px;">
                    <i class="bi bi-key-fill text-green"></i>
                </div>
                <div>
                    <h6 class="fw-bold mb-0 letter-tight">New Password</h6>
                    <span class="text-muted text-xs">Choose a strong password</span>
                </div>
            </div>
            <div class="mb-4">
                <div class="input-group input-group-lg">
                    <span class="input-group-text rounded-start-3 border-end-0" style="background:rgba(34,197,94,0.06);">
                        <i class="bi bi-key text-green"></i>
                    </span>
                    <input asp-for="Input.NewPassword" class="form-control rounded-end-3 border-start-0"
                           autocomplete="new-password" placeholder="Enter new password"
                           style="padding:0.875rem 1rem;font-size:1rem;" />
                </div>
                <span asp-validation-for="Input.NewPassword" class="text-danger text-xs"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-4">
                <div class="input-group input-group-lg">
                    <span class="input-group-text rounded-start-3 border-end-0" style="background:rgba(34,197,94,0.06);">
                        <i class="bi bi-check2-circle text-green"></i>
                    </span>
                    <input asp-for="Input.ConfirmPassword" class="form-control rounded-end-3 border-start-0"
                           autocomplete="new-password" placeholder="Confirm new password"
                           style="padding:0.875rem 1rem;font-size:1rem;" />
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger text-xs"></span>
            </div>

            <!-- Policy Notice -->
            <div class="rounded-3 p-3 mb-4 d-flex align-items-start gap-3"
                 style="background:rgba(99,102,241,0.04);border:1px solid rgba(99,102,241,0.1);">
                <div class="moc-icon-box bg-indigo-50 rounded-3" style="width:40px;height:40px;min-width:40px;">
                    <i class="bi bi-shield-check text-indigo"></i>
                </div>
                <div>
                    <p class="fw-semibold text-sm mb-1 letter-tight">Password Requirements</p>
                    <p class="text-muted text-xs mb-0">
                        Passwords must be at least 6 characters long and contain at least one uppercase letter,
                        one lowercase letter, one digit, and one special character.
                    </p>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-moc-primary btn-lg py-3">
                    <i class="bi bi-check-circle me-1"></i> Update Password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
