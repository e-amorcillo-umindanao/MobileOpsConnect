@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="moc-section-header">
    <h5 class="fw-bold letter-tight">
        <i class="bi bi-envelope-fill text-cyan me-1"></i> Manage Email
    </h5>
    <hr />
</div>

<partial name="_StatusMessage" for="StatusMessage" />

<div class="card moc-card border-0 shadow-sm">
    <div class="card-body p-4 p-md-5">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>

            <!-- Current Email -->
            <div class="d-flex align-items-center mb-3">
                <div class="moc-icon-box bg-cyan-50 rounded-3 me-3" style="width:40px;height:40px;min-width:40px;">
                    <i class="bi bi-envelope-check-fill text-cyan"></i>
                </div>
                <div>
                    <h6 class="fw-bold mb-0 letter-tight">Current Email</h6>
                    <span class="text-muted text-xs">Your registered email address</span>
                </div>
            </div>
            <div class="mb-4 d-flex align-items-center gap-2">
                <input asp-for="Email" class="form-control form-control-lg rounded-3" disabled
                       style="padding:0.875rem 1rem;font-size:1rem;background:var(--moc-surface);" />
                @if (Model.IsEmailConfirmed)
                {
                    <span class="badge bg-green-50 text-green rounded-pill px-3 py-2">
                        <i class="bi bi-check-circle-fill me-1"></i> Verified
                    </span>
                }
                else
                {
                    <span class="badge bg-amber-50 text-amber rounded-pill px-3 py-2">
                        <i class="bi bi-exclamation-circle-fill me-1"></i> Unverified
                    </span>
                }
            </div>

            <hr class="my-4 opacity-10" />

            <!-- New Email -->
            <div class="d-flex align-items-center mb-3">
                <div class="moc-icon-box bg-indigo-50 rounded-3 me-3" style="width:40px;height:40px;min-width:40px;">
                    <i class="bi bi-pencil-fill text-indigo"></i>
                </div>
                <div>
                    <h6 class="fw-bold mb-0 letter-tight">New Email</h6>
                    <span class="text-muted text-xs">Enter a new email address to update</span>
                </div>
            </div>
            <div class="mb-4">
                <div class="input-group input-group-lg">
                    <span class="input-group-text rounded-start-3 border-end-0" style="background:rgba(99,102,241,0.06);">
                        <i class="bi bi-at text-indigo"></i>
                    </span>
                    <input asp-for="Input.NewEmail" class="form-control rounded-end-3 border-start-0"
                           placeholder="Enter new email address"
                           style="padding:0.875rem 1rem;font-size:1rem;" />
                </div>
                <span asp-validation-for="Input.NewEmail" class="text-danger text-xs"></span>
            </div>

            <div class="d-grid">
                <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-moc-primary btn-lg py-3">
                    <i class="bi bi-check-circle me-1"></i> Change Email
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
