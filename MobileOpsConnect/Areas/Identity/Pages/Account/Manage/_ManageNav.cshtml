@inject SignInManager<IdentityUser> SignInManager

@{
    var hasPassword = await SignInManager.UserManager.HasPasswordAsync(await SignInManager.UserManager.GetUserAsync(User));
}

<div class="card moc-card border-0 shadow-sm">
    <div class="card-body p-3">
        <p class="text-uppercase text-xs fw-bold text-muted letter-tight mb-3 px-2">
            <i class="bi bi-gear-fill me-1"></i> Account Settings
        </p>
        <nav class="nav flex-column gap-1" id="manage-nav">
            <a class="nav-link rounded-3 px-3 py-2 d-flex align-items-center gap-2 text-sm fw-semibold @ManageNavPages.IndexNavClass(ViewContext)"
               id="profile" asp-page="./Index">
                <div class="d-flex align-items-center justify-content-center rounded-2" 
                     style="width:28px;height:28px;min-width:28px;background:rgba(99,102,241,0.08);">
                    <i class="bi bi-person-fill text-indigo" style="font-size:0.8rem;"></i>
                </div>
                Profile
            </a>
            <a class="nav-link rounded-3 px-3 py-2 d-flex align-items-center gap-2 text-sm fw-semibold @ManageNavPages.EmailNavClass(ViewContext)"
               id="email" asp-page="./Email">
                <div class="d-flex align-items-center justify-content-center rounded-2"
                     style="width:28px;height:28px;min-width:28px;background:rgba(6,182,212,0.08);">
                    <i class="bi bi-envelope-fill text-cyan" style="font-size:0.8rem;"></i>
                </div>
                Email
            </a>
            @if (hasPassword)
            {
                <a class="nav-link rounded-3 px-3 py-2 d-flex align-items-center gap-2 text-sm fw-semibold @ManageNavPages.ChangePasswordNavClass(ViewContext)"
                   id="change-password" asp-page="./ChangePassword">
                    <div class="d-flex align-items-center justify-content-center rounded-2"
                         style="width:28px;height:28px;min-width:28px;background:rgba(245,158,11,0.08);">
                        <i class="bi bi-key-fill text-amber" style="font-size:0.8rem;"></i>
                    </div>
                    Password
                </a>
            }
            <a class="nav-link rounded-3 px-3 py-2 d-flex align-items-center gap-2 text-sm fw-semibold @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)"
               id="two-factor" asp-page="./TwoFactorAuthentication">
                <div class="d-flex align-items-center justify-content-center rounded-2"
                     style="width:28px;height:28px;min-width:28px;background:rgba(34,197,94,0.08);">
                    <i class="bi bi-shield-lock-fill text-green" style="font-size:0.8rem;"></i>
                </div>
                Two-Factor Auth
            </a>
            <a class="nav-link rounded-3 px-3 py-2 d-flex align-items-center gap-2 text-sm fw-semibold @ManageNavPages.PersonalDataNavClass(ViewContext)"
               id="personal-data" asp-page="./PersonalData">
                <div class="d-flex align-items-center justify-content-center rounded-2"
                     style="width:28px;height:28px;min-width:28px;background:rgba(239,68,68,0.08);">
                    <i class="bi bi-database-fill text-red" style="font-size:0.8rem;"></i>
                </div>
                Personal Data
            </a>
        </nav>
    </div>
</div>

<style>
    #manage-nav .nav-link { color: var(--moc-text); transition: all 0.2s ease; }
    #manage-nav .nav-link:hover { background: rgba(99,102,241,0.06); color: var(--moc-primary); }
    #manage-nav .nav-link.active { background: var(--moc-primary); color: #fff !important; }
    #manage-nav .nav-link.active div { background: rgba(255,255,255,0.2) !important; }
    #manage-nav .nav-link.active i { color: #fff !important; }
</style>
